{% extends '::base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('themes/new-theme/public/theme.css') }}" />
{% endblock %}

{% block title %}
  {{ 'An unexpected error occurred'|trans({},'Admin.Catalog.Help' ) }}
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12">
        <div class="card">
          <div class="card-body text-center">
            <h1 class="card-title">{{ status_text }}</h1>
            <h3 class="card-subtitle mb-2 text-muted">{{ 'Status code:'|trans({}, 'Admin.Global') }}{{ status_code }}</h3>

            {% if exception %}
              <p class="lead mb-0">{{ 'See additional error information below.'|trans({}, 'Admin.Global') }}</p>
              <p class="mb-0"><strong>{{ 'Message'|trans({}, 'Admin.Global') }}:</strong> {{ exception.message }}</p>
              <p class="mb-0"><strong>{{ 'Code'|trans({}, 'Admin.Global') }}:</strong> {{ exception.code }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
