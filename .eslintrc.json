{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "eqeqeq": 2,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 0,
    "max-depth": [2, 3],
    "no-loop-func": 2
  }
}
