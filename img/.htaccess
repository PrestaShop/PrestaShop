# Apache 2.2
<IfModule !mod_authz_core.c>
    Order deny,allow
    <Files "*.*">
        Deny From All
    </Files>
    <Files ~ "(?i)^(.*\.(jpg|jpeg|gif|png|bmp|tiff|svg|pdf|mov|mpeg|mp4|avi|mpg|wma|flv|webm|ico|webp|avif)|index\.php)$">
        Allow from all
    </Files>
</IfModule>

# Apache 2.4
<IfModule mod_authz_core.c>
    <Files "*.*">
        Require all denied
    </Files>
    <Files ~ "(?i)^(.*\.(jpg|jpeg|gif|png|bmp|tiff|svg|pdf|mov|mpeg|mp4|avi|mpg|wma|flv|webm|ico|webp|avif)|index\.php)$">
        Require all granted
    </Files>
</IfModule>
