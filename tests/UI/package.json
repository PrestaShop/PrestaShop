{
  "name": "ui-tests",
  "version": "1.0.0",
  "description": "User interface tests",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "// ESLint": "To run ESLint commands",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "lint": "eslint --ignore-path .gitignore .",
    "// Step identifiers": "Script to check step identifiers",
    "check:step-identifiers": "node tools/stepIdentifiersChecker.js ",
    "// Linkchecker": "Script to run link checker",
    "check:links": "ts-mocha tools/linkchecker.ts",
    "check:links:fast-fail": "ts-mocha --bail tools/linkchecker.ts",
    "// Specific test": "Script to run a specific test/folder",
    "test:specific": "ts-mocha --recursive --file utils/setup.ts campaigns/$TEST_PATH",
    "test:specific:fast-fail": "ts-mocha --bail --recursive --file utils/setup.ts campaigns/$TEST_PATH",
    "// Sanity": "Scripts to run sanity tests",
    "test:sanity": "TEST_PATH='sanity/**/*.{ts,js}' npm run test:specific",
    "test:sanity:fast-fail": "TEST_PATH='sanity/**/*.{ts,js}' npm run test:specific:fast-fail",
    "test:sanity:productV2": "TEST_PATH='productV2/sanity/**/*.{ts,js}' npm run test:specific",
    "test:sanity:productV2:fast-fail": "TEST_PATH='productV2/sanity/**/*.{ts,js}' npm run test:specific:fast-fail",
    "// Functional": "Scripts to run functional tests",
    "test:functional": "TEST_PATH='functional/**/*.{ts,js}' npm run test:specific",
    "// Functional BO": "Scripts to run functional BO tests",
    "test:functional:BO": "TEST_PATH='functional/BO/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:login": "TEST_PATH='functional/BO/00_login/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:orders": "TEST_PATH='functional/BO/02_orders/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:orders:01": "TEST_PATH='functional/BO/02_orders/01*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:orders:02": "TEST_PATH='functional/BO/02_orders/02*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:orders:03-05": "TEST_PATH='functional/BO/02_orders/0[3-5]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:catalog": "TEST_PATH='functional/BO/03_catalog/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:catalog:01-04": "TEST_PATH='functional/BO/03_catalog/0[1-4]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:catalog:05-08": "TEST_PATH='functional/BO/03_catalog/0[5-8]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:productV2:functional": "TEST_PATH='productV2/functional/**/*.ts' npm run test:specific",
    "test:functional:BO:customer": "TEST_PATH='functional/BO/04_customers/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:customer-service": "TEST_PATH='functional/BO/05_customerService/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:modules": "TEST_PATH='functional/BO/07_modules/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:design": "TEST_PATH='functional/BO/08_design/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:shipping": "TEST_PATH='functional/BO/09_shipping/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:payment": "TEST_PATH='functional/BO/10_payment/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:international": "TEST_PATH='functional/BO/11_international/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:international:01-02": "TEST_PATH='functional/BO/11_international/0[1-2]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:international:03-04": "TEST_PATH='functional/BO/11_international/0[3-4]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:shop-parameters": "TEST_PATH='functional/BO/13_shopParameters/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:shop-parameters:01-04": "TEST_PATH='functional/BO/13_shopParameters/0[1-4]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:shop-parameters:05-07": "TEST_PATH='functional/BO/13_shopParameters/0[5-7]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:advanced-parameters": "TEST_PATH='functional/BO/14_advancedParameters/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:advanced-parameters:01-06": "TEST_PATH='functional/BO/14_advancedParameters/0[1-6]*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:advanced-parameters:07-10": "TEST_PATH='functional/BO/14_advancedParameters/{0[7-9],10}*/**/*.{ts,js}' npm run test:specific",
    "test:functional:BO:header": "TEST_PATH='functional/BO/15_header/**/*.{ts,js}' npm run test:specific",
    "// Functional FO": "Scripts to run functional FO tests",
    "test:functional:FO": "TEST_PATH='functional/FO/**/*.{ts,js}' npm run test:specific",
    "// Regression tests": "Scripts to run regression tests",
    "test:regression": "TEST_PATH='regression/**/*.{ts,js}' npm run test:specific",
    "// All tests": "Scripts to run all campaigns",
    "test:all": "ts-mocha --recursive --file utils/setup.ts campaigns/functional/* campaigns/sanity/* campaigns/regression/*"
  },
  "_moduleAliases": {
    "@pages": "pages",
    "@commonTests": "commonTests",
    "@data": "data",
    "@utils": "utils",
    "@tools": "tools"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PrestaShop/PrestaShop.git"
  },
  "keywords": [
    "playwright",
    "sanity",
    "functional"
  ],
  "author": "PrestaShop",
  "license": "OSL-3.0",
  "bugs": {
    "url": "https://github.com/PrestaShop/PrestaShop/issues"
  },
  "homepage": "https://github.com/PrestaShop/PrestaShop/tree/develop/tests/UI#readme",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "chai": "^4.3.6",
    "chai-string": "^1.5.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "js-image-generator": "^1.0.2",
    "maildev": "^2.0.5",
    "mocha": "^10.1.0",
    "mochawesome": "^7.1.3",
    "module-alias": "^2.2.2",
    "pdfjs-dist": "^3.0.279",
    "playwright": "^1.28.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/mochawesome": "^6.2.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "jsdoc-to-markdown": "^7.1.1",
    "mochawesome-merge": "^4.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.8.4"
  }
}
