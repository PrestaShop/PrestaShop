<phpunit
    bootstrap="bootstrap.php"
    backupGlobals="true">
  <php>
    <server name="KERNEL_CLASS" value="AdminKernel" />
  </php>
  <testsuites>
    <testsuite name="Unit">
      <directory>.</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
      <directory suffix=".php">../../src</directory>
      <directory suffix=".php">../../classes</directory>
      <directory suffix=".php">../../controllers</directory>
    </whitelist>
  </filter>
</phpunit>
