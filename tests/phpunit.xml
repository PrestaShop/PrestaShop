<phpunit bootstrap="bootstrap.php">
    <php>
        <server name="KERNEL_DIR" value="../app/" />
    </php>
    <groups>
        <exclude>
            <group>admin</group>
            <group>demo</group>
            <group>api</group>
        </exclude>
    </groups>
    <testsuites>
        <testsuite name="Unit">
            <directory>Unit</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>Integration</directory>
        </testsuite>
    </testsuites>
</phpunit>
