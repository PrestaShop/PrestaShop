body.lang-rtl, .lang-rtl h1, .lang-rtl h2, .lang-rtl .modal-title, .lang-rtl h3, .lang-rtl h4, .lang-rtl h5, .lang-rtl h6, .lang-rtl .h1, .lang-rtl .h2, .lang-rtl .h3, .lang-rtl .h4, .lang-rtl .h5, .lang-rtl .h6, .lang-rtl .tooltip, .lang-rtl .popover, .lang-rtl .module-search-result-title {
  font-family: Vazir, Tahoma, Arial, sans-serif !important;
}

@keyframes showcase-img-appearance-rtl {
  from {
    -webkit-transform: translate(-20px) translateX(-1);
    -ms-transform: translate(-20px) translateX(-1);
    -webkit-transform: translate(-20px) translateX(-1);
    transform: translate(-20px) translateX(-1);
    opacity: 0;
  }
  to {
    -webkit-transform: translate(0) translateX(-1);
    -ms-transform: translate(0) translateX(-1);
    -webkit-transform: translate(0) translateX(-1);
    transform: translate(0) translateX(-1);
    opacity: 1;
  }
}

.sidebar.sidebar-right {
  -webkit-transform: translate(-100%, 0);
  -moz-transform: translate(-100%, 0);
  -ms-transform: translate(-100%, 0);
  -o-transform: translate(-100%, 0);
  transform: translate(-100%, 0);
}

/* Fix profile menu position */
.employee-dropdown .dropdown-menu {
  right: auto !important;
  left: .3em !important;
}

/* Fix select dropdown */
.select2-container--open .select2-dropdown {
  right: auto;
  left: 0;
}

/* Fix notification dropdown position */
.notification-center .dropdown-menu {
  right: auto;
  left: 44px !important;
}

/* Fix popover position */
.popover {
  right: auto;
  left: 5px;
  margin-right: 0;
  margin-left: 8px;
}

.popover .arrow {
  left: -7px;
  right: auto !important;
  transform: scaleX(-1);
}

/* Fix image flipping */
.img-rtl {
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
  animation: showcase-img-appearance-rtl .4s;
}

/* Fix order status dropdown width */
#order_grid_table .dropdown-menu {
  left: 0 !important;
  right: auto;
}

/* Fix checked mark direction for checkboxes */
.md-checkbox [type="checkbox"]:checked + .md-checkbox-control::after,
.md-checkbox .indeterminate + .md-checkbox-control::after {
  border-right-style: none;
  border-left-style: solid;
}

/* Fix dropdown menu placement */
.dropdown-menu[x-placement="top-start"],
.dropdown-menu[x-placement="bottom-start"] {
  left: auto !important;
  right: 0;
}

/* Fix header search dropdown width */
.main-header #header-search-container .dropdown-menu {
  right: auto;
  left: 0 !important;
}

/* Fix bootstrap date picker arrows direction */
.bootstrap-datetimepicker-widget table th.next,
.bootstrap-datetimepicker-widget table th.prev {
  transform: scaleX(-1);
}

/* Fix TinyMCE dropdown and popup position */
.mce-window,
.mce-menu {
  right: auto !important;
  left: 0;
}

/* Fix arrow direction in category list */
ul.category-tree .more > .checkbox:before,
ul.category-tree .more > .radio:before,
.material-choice-tree-container ul.choice-tree .collapsed > .checkbox:before,
.material-choice-tree-container ul.choice-tree .collapsed > .radio:before {
  content: "\E5CB";
}

/* Fix pagination arrows direction */
.page-item.previous.next .page-link:after,
.page-item.next.next .page-link:after {
  content: "\E314";
}

.page-item.previous.previous .page-link:after,
.page-item.next.previous .page-link:after {
  content: "\E315";
}

/* Fix history edit button position */
.history-item i {
  right: auto !important;
  left: 1rem;
}

/* Fix bidirectionality for material icons */
.material-icons.rtl-flip {
  transform: scaleX(-1);
}

/* Fix combinations filter items */
.combinations-filters-dropdown .dropdown-item .md-checkbox-container {
  padding-left: 0 !important;
  padding-right: 28px;
}

/* Fix header overflow in mobile screen */
.mobile .content-div {
  overflow: hidden;
}

/* Fix the datepicker input group alignment */
.column-filters .datepicker {
  flex-wrap: nowrap;
}

/* Fix dropdown overflow inside grid table */
.table-responsive {
  overflow-y: hidden;
}

/* Fix scrollbar position in sidebar menu */
.nav-bar-overflow .ps__rail-y {
  left: 0 !important;
}
