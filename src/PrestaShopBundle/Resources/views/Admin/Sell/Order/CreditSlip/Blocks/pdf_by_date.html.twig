{% trans_default_domain "Admin.Orderscustomers.Feature" %}
{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block credit_slip_pdf_by_date %}
    {{ form_start(pdfByDateForm, {
      'method': 'GET',
      'action': path('admin_credit_slips_pdf_by_date')})
    }}
    <div class="card">
      <h3 class="card-header">
        <i class="material-icons">date_range</i> {{ 'By date'|trans }}
      </h3>
      <div class="card-block row">
        <div class="card-text">
          <div class="form-group row">
            {{ ps.label_with_help(('From'|trans({}, 'Admin.Global')), ('Format: 2011-12-31 (inclusive).'|trans({}, 'Admin.Orderscustomers.Help'))) }}
            <div class="col-sm">
              {{ form_errors(pdfByDateForm.from) }}
              {{ form_widget(pdfByDateForm.from) }}
            </div>
          </div>
          <div class="form-group row">
            {{ ps.label_with_help(('To'|trans({}, 'Admin.Global')), ('Format: 2011-12-31 (inclusive).'|trans({}, 'Admin.Orderscustomers.Help'))) }}
            <div class="col-sm">
              {{ form_errors(pdfByDateForm.to) }}
              {{ form_widget(pdfByDateForm.to) }}
            </div>
          </div>
        </div>
        {% block credit_slip_pdf_by_date_form_rest %}
          {{ form_rest(pdfByDateForm) }}
        {% endblock %}
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-end">
          <button class="btn btn-primary">
            {{ 'Generate PDF file by date'|trans({}, 'Admin.Orderscustomers.Feature') }}
          </button>
        </div>
      </div>
    </div>
    {{ form_end(pdfByDateForm) }}
{% endblock %}
