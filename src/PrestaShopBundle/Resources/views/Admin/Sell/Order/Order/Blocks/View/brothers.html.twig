<div class="card" id="orderBrothersPanel">
  <div class="card-header">
    <h3 class="card-header-title">
      {{ 'Linked orders'|trans({}, 'Admin.Orderscustomers.Feature') }}
      <span class="badge badge-primary rounded">{{ orderForViewing.brothers.brothers|length }}</span>
    </h3>
  </div>

  <div class="card-body">
    <table class="table mb-3">
      <thead>
      <tr>
        <th>
          {{ 'Order no. '|trans({}, 'Admin.Orderscustomers.Feature') }}
        </th>
        <th>
          {{ 'Status'|trans({}, 'Admin.Global') }}
        </th>
        <th>
          {{ 'Amount'|trans({}, 'Admin.Global') }}
        </th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      {% if orderForViewing.brothers.brothers is not empty %}
      {% for brother in orderForViewing.brothers.brothers %}
      <tr>
        <td>
          <a class="_blank" href="{{ path('admin_orders_view', {'orderId': brother.orderId}) }}">
            {{ brother.orderId }}
          </a>
        </td>
        <td>
          {{ brother.statusName }}
        </td>
        <td>
          {{ brother.amount }}
        </td>
        <td>
          <a class="_blank" href="{{ path('admin_orders_view', {'orderId': brother.orderId}) }}">
            <i class="material-icons">remove_red_eye</i>
            {{ 'View order'|trans({}, 'Admin.Orderscustomers.Feature') }}
          </a>
        </td>
        {% endfor %}
        {% endif %}
      </tbody>
    </table>
  </div>
