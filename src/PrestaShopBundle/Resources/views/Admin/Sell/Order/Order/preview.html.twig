{% block order_preview %}
  <div class="row order-preview-content mt-2">
    <table class="col-4 table-responsive-sm details">
      <thead>
        <tr>
          <th class="mb-1">
            <i class="material-icons">receipt</i>
            {{ 'Invoice details'|trans({}, 'Admin.Global') }}:
          </th>
          <th class="mb-1">
            <i class="material-icons">local_shipping</i>
            {{ 'Shipping details'|trans({}, 'Admin.Global') }}:
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ orderPreview.invoiceDetails.firstName }} {{ orderPreview.invoiceDetails.lastName }}</td>
          <td>{{ orderPreview.invoiceDetails.firstName }} {{ orderPreview.shippingDetails.lastName }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.company }}</td>
          <td>{{ orderPreview.shippingDetails.address1 }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.address1 }}</td>
          <td>{{ orderPreview.shippingDetails.address2 }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.address2 }}</td>
          <td>{{ orderPreview.shippingDetails.country }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.country }}</td>
          <td>{{ orderPreview.shippingDetails.phone }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.phone }}</td>
        </tr>

        <tr>
          <td>{{ orderPreview.invoiceDetails.email }}</td>
        </tr>
      </tbody>
    </table>
    <div class="offset-2 col-6 ">
      <div class="table-responsive">
        <table class="table product table-borderless border-bottom-0">
          <thead>
          <tr>
            {% if orderPreview.taxIncluded %}
              {% set taxInclusion = 'Tax included'|trans({}, 'Admin.Global') %}
            {% else %}
              {% set taxInclusion = 'Tax excluded'|trans({}, 'Admin.Catalog.Feature') %}
            {% endif %}

            <th>{{ 'Product'|trans({}, 'Admin.Global') }}</th>
            <th>
              {{ 'Base price'|trans({}, 'Admin.Global') }}
              <small>{{ taxInclusion }}</small>
            </th>
            <th>{{ 'Quantity'|trans({}, 'Admin.Global') }}</th>
            <th>
              {{ 'Total'|trans({}, 'Admin.Global') }}
              <small>{{ taxInclusion }}</small>
            </th>
          </tr>
          </thead>
          <tbody>
          {% for productDetail in orderPreview.productDetails %}
            <tr>
              <td class="p-1">{{ productDetail.name }}</td>
              <td class="p-1">{{ productDetail.unitPrice }}</td>
              <td class="p-1">{{ productDetail.quantity }}</td>
              <td class="p-1">{{ productDetail.totalPrice }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>

      <div class="text-right">
        <a href="{{ path('admin_orders_view', {'orderId': orderId}) }}" class="btn btn-primary btn-sm">
          {{ 'Open order'|trans({}, 'Admin.Orderscustomers.Feature') }}
          <i class="material-icons">arrow_right_alt</i>
        </a>
      </div>
    </div>
  </div>
{% endblock %}

