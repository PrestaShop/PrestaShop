<div class="card d-none" id="addresses-block">
  <h3 class="card-header">
    {{ 'Addresses'|trans({}, 'Admin.Global') }}
  </h3>
  <div class="card-body">
    <div class="row" id="addresses-warning">
      <div class="col">
        <div class="alert alert-warning">
          <div class="alert-text">
            {{ 'You must add at least one address to process the order.'|trans({}, 'Admin.Orderscustomers.Notification') }}
          </div>
        </div>
      </div>
    </div>
    <div class="row" id="addresses-content">
      <div class="col">
        <span>{{ 'Delivery'|trans({}, 'Admin.Global') }}</span>
        <select class="form-control js-address-select" id="delivery-address-select"></select>

        <div class="card mt-3">
          <div class="card-body clearfix">
            <button type="button" class="btn btn-outline-primary float-right">{{ 'Edit'|trans({}, 'Admin.Actions') }}</button>
            <div id="delivery-address-details"></div>
          </div>
        </div>
      </div>
      <div class="col">
        <span>{{ 'Invoice'|trans({}, 'Admin.Global') }}</span>
        <select class="form-control js-address-select" id="invoice-address-select"></select>

        <div class="card mt-3">
          <div class="card-body clearfix">
            <button type="button" class="btn btn-outline-primary float-right">{{ 'Edit'|trans({}, 'Admin.Actions') }}</button>
            <div id="invoice-address-details"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        {#@todo: add link after addresses migration. Also in js on edit buttons#}
        <button type="button" class="btn btn-primary">
          {{ 'Add a new address'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </button>
      </div>
    </div>
  </div>
</div>
<script type="text/template" id="js-disabled-address-warn">
  <div class="alert alert-danger">
    <div class="alert-text">
      {#@todo translate#}
      This address country is not active
    </div>
  </div>
</script>
