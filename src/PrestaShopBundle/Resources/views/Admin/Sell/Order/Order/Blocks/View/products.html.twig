{% set paginationNum = 8 %}
<div class="card" id="orderProductsPanel">
  <div class="card-header">
    <h3 class="card-header-title">
      {{ 'Products'|trans({}, 'Admin.Global') }} (<span id="orderProductsPanelCount">{{ orderForViewing.products.products|length }}</span>)
    </h3>
  </div>

  <div class="card-body">
    <table class="table" id="orderProductsTable">
      <thead>
        <tr>
          <th>
            <p>{{ 'Product'|trans({}, 'Admin.Global') }}</p>
          </th>
          <th></th>
          <th>
            <p class="mb-0">{{ 'Price per unit'|trans({}, 'Admin.Advparameters.Feature') }}</p>
            <small class="text-muted">{{ orderForViewing.taxMethod }}</small>
          </th>
          <th>
            <p>{{ 'Quantity'|trans({}, 'Admin.Global') }}</p>
          </th>
          <th>
            <p>{{ 'Stock Location'|trans({}, 'Admin.Global') }}</p>
          </th>
          <th>
            <p>{{ 'Refunded'|trans({}, 'Admin.Orderscustomers.Feature') }}</p>
          </th>
          <th>
            <p>{{ 'Available'|trans({}, 'Admin.Global') }}</p>
          </th>
          <th>
            <p class="mb-0">{{ 'Total'|trans({}, 'Admin.Global') }}</p>
            <small class="text-muted">{{ orderForViewing.taxMethod }}</small>
          </th>
          {% if not orderForViewing.delivered %}
            <th class="text-right product_actions">
              <p>{{ 'Actions'|trans({}, 'Admin.Global') }}</p>
            </th>
          {% endif %}
          <th class="text-center partial-refund">
            <p>{{ 'Partial refund'|trans({}, 'Admin.Orderscustomers.Feature') }}</p>
          </th>
        </tr>
      </thead>
      <tbody>
      {{ form_start(partialRefundForm, {'action': path('admin_orders_partial_refund', {'orderId': orderForViewing.id})}) }}
        {#  @todo Optimize this by using a GetPartialOrderForViewing query which loads only the relevant products #}
        {% for product in orderForViewing.products.products|slice(0, paginationNum) %}
          {% include '@PrestaShop/Admin/Sell/Order/Order/Blocks/View/product.html.twig' with {'product': product} %}
        {% endfor %}
        <tr id="addProductTableRow" class="d-none">
          <td colspan="2" class="pr-5">
            <input type="hidden" id="addProductId">
            <input type="hidden" id="addProductTaxRate">
            <label for="addProductSearch">{{ 'Add a product'|trans({}, 'Admin.Orderscustomers.Feature') }}</label>
            <input type="text" class="form-control" id="addProductSearch" placeholder="{{ 'Search for a product'|trans({}, 'Admin.Orderscustomers.Feature') }}">
            <div class="input-group mt-2 d-none" id="addProductCombinations">
              <div class="input-group-prepend">
                <div class="input-group-text">{{ 'Combinations'|trans({}, 'Admin.Global') }}</div>
              </div>
              <select id="addProductCombinationId" class="custom-select"></select>
            </div>
          </td>
          <td class="pr-5">
            <div class="input-group">
              <input type="text" id="addProductPriceTaxExcl" class="form-control">
              <div class="input-group-append">
                <div class="input-group-text">{{ orderCurrency.symbol }} {{ 'tax excl.'|trans({}, 'Admin.Global') }}</div>
              </div>
            </div>
            <div class="input-group mt-2">
              <input type="text" id="addProductPriceTaxIncl" class="form-control">
              <div class="input-group-append">
                <div class="input-group-text">{{ orderCurrency.symbol }} {{ 'tax incl.'|trans({}, 'Admin.Global') }}</div>
              </div>
            </div>
          </td>
          <td class="pr-5"><input type="number" id="addProductQuantity" min="1" value="1" class="form-control"></td>
          <td id="addProductAvailable"></td>
          <td colspan="3">
            <button type="button" class="btn btn-sm btn-secondary js-product-add-action-btn mr-2 d-inline" id="cancelAddProductBtn">
              {{ 'Cancel'|trans({}, 'Admin.Actions') }}
            </button>
            <button type="button" class="btn btn-sm btn-primary js-product-add-action-btn mt-2 mb-2 d-inline" id="addProductActionBtn" data-order-id="{{ orderForViewing.id }}" disabled>
              {{ 'Add'|trans({}, 'Admin.Actions') }}
            </button>
          </td>
        </tr>
        <tr id="editProductTableRow" class="d-none">
          <td></td>
          <td></td>
          <td class="pr-5">
            <input type="hidden" class="editOrderDetailId">
            <input type="hidden" class="editProductTaxRate">
            <div class="input-group">
              <input type="text" class="form-control editProductPriceTaxExcl">
              <div class="input-group-append">
                <div class="input-group-text">{{ orderCurrency.symbol }} {{ 'tax excl.'|trans({}, 'Admin.Global') }}</div>
              </div>
            </div>
            <div class="input-group mt-2">
              <input type="text" class="form-control editProductPriceTaxIncl">
              <div class="input-group-append">
                <div class="input-group-text">{{ orderCurrency.symbol }} {{ 'tax incl.'|trans({}, 'Admin.Global') }}</div>
              </div>
            </div>
          </td>
          <td class="pr-5"><input type="number" class="editProductQuantity form-control" min="1" value="1"></td>
          <td class="editProductAvailable"></td>
          <td colspan="3">
            <button type="button" class="btn btn-sm btn-secondary js-product-edit-action-btn mr-2 d-inline cancelEditProductBtn">
              {{ 'Cancel'|trans({}, 'Admin.Actions') }}
            </button>
            <button type="button" class="btn btn-sm btn-primary js-product-edit-action-btn mt-2 mb-2 d-inline editProductActionBtn" data-order-id="{{ orderForViewing.id }}">
              {{ 'Save'|trans({}, 'Admin.Actions') }}
            </button>
          </td>
        </tr>
        <tr id="templateProductTableRow" class="d-none">
          <td>
              <img alt="">
          </td>
          <td>
            <a href="">
              <p class="mb-0"></p>
              <p class="mb-0">
                {{ 'Reference number:'|trans({}, 'Admin.Orderscustomers.Feature') }}
              </p>
              <p class="mb-0">
               {{ 'Supplier reference:'|trans({}, 'Admin.Orderscustomers.Feature') }}
              </p>
            </a>
          </td>
          <td></td>
          <td></td>
          <td>
            <span class="badge badge-secondary rounded-circle"></span>
            <div class="d-none js-product-quantity">
              <input type="text" value="" class="form-control">
            </div>
          </td>
          <td></td>
          <td></td>
            <td class="text-right">
              <a href="#"
                 class="tooltip-link"
                 data-toggle="pstooltip"
                 data-placement="top"
                 data-original-title="{{ 'Edit'|trans({}, 'Admin.Actions') }}"
              >
                <i class="material-icons js-order-product-edit-btn"
                   data-order-detail-id=""
                   data-product-quantity=""
                   data-product-price-tax-incl=""
                   data-product-price-tax-excl=""
                   data-tax-rate=""
                >edit</i>
              </a>

              <a href="#"
                 class="ml-2 tooltip-link js-order-product-delete-btn"
                 data-toggle="pstooltip"
                 data-placement="top"
                 data-order-id=""
                 data-order-detail-id=""
                 data-delete-message="{{ 'Are you sure?'|trans({}, 'Admin.Notifications.Warning') }}"
                 data-original-title="{{ 'Delete'|trans({}, 'Admin.Actions') }}"
              >
                <i class="material-icons">delete</i>
              </a>
            </td>
        </tr>
      </tbody>
    </table>

    <div class="row mb-3">
      <div class="col-md-6 text-left">
        {% if orderForViewing.products.products|length > paginationNum %}
          {% set paginationNum = (orderForViewing.products.products|length / paginationNum)|round(0, 'floor') + 1%}
          <nav aria-label="Products Navigation">
            <ul class="pagination" id="orderProductsTablePagination">
              <li class="page-item disabled" id="orderProductsTablePaginationPrev">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              {% for numPage in 1..paginationNum %}
                <li class="page-item{% if numPage==1 %} active{% endif %}"><span class="page-link" data-order-id="{{ orderForViewing.id }}" data-page="{{ numPage }}">{{ numPage }}</span></li>
              {% endfor %}
              <li class="page-item" id="orderProductsTablePaginationNext">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
        {% endif %}
      </div>
      <div class="col-md-6 text-right">
        {% if not orderForViewing.delivered %}
          <button type="button" class="btn btn-outline-secondary js-product-action-btn mr-3" id="addProductBtn">
            <i class="material-icons">add_circle_outline</i>
            {{ 'Add a product'|trans({}, 'Admin.Orderscustomers.Feature') }}
          </button>
        {% endif %}
        <button type="button" class="btn btn-outline-secondary js-product-action-btn" data-toggle="modal" data-target="#addOrderDiscountModal">
          <i class="material-icons">confirmation_number</i>
          {{ 'Add a discount'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </button>
      </div>
    </div>

    {% if orderForViewing.discounts.discounts is not empty %}
      <table class="table">
        <thead>
          <tr>
            <th>{{ 'Name'|trans({}, 'Admin.Global') }}</th>
            <th>{{ 'Value'|trans({}, 'Admin.Global') }}</th>
            <th class="text-right">{{ 'Actions'|trans({}, 'Admin.Global') }}</th>
          </tr>
        </thead>
        <tbody>
          {% for discount in orderForViewing.discounts.discounts %}
            <tr>
              <td>{{ discount.name }}</td>
              <td>
                {% if discount.amountRaw %}-{% endif %}
                {{ discount.amountFormatted }}
              </td>
              <td class="text-right">
                <form action="{{ path('admin_orders_remove_cart_rule', {'orderId': orderForViewing.id, 'orderCartRuleId': discount.orderCartRuleId}) }}" method="post">
                  <button type="submit"
                          class="ml-2 tooltip-link btn btn-text"
                          data-toggle="pstooltip"
                          data-placement="top"
                          data-original-title="{{ 'Delete'|trans({}, 'Admin.Actions') }}"
                  >
                    <i class="material-icons">delete</i>
                  </button>
                </form>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}

    <div class="row">
      <div class="col-md-12">
        <div class="info-block">
          <div class="row">
            <div class="col-sm text-center">
              <p class="text-muted mb-0"><strong>{{ 'Products'|trans({}, 'Admin.Global') }}</strong></p>
              <strong id="orderProductsTotal">{{ orderForViewing.prices.productsPriceFormatted }}</strong>
            </div>

            {% if orderForViewing.prices.discountsAmountRaw %}
              <div class="col-sm text-center">
                <p class="text-muted mb-0"><strong>{{ 'Discounts'|trans({}, 'Admin.Global') }}</strong></p>
                <strong class="orderDiscountsTotal">-{{ orderForViewing.prices.discountsAmountFormatted }}</strong>
              </div>
            {% endif %}

            {% if orderForViewing.prices.wrappingPriceRaw %}
              <div class="col-sm text-center">
                <p class="text-muted mb-0"><strong>{{ 'Wrapping'|trans({}, 'Admin.Orderscustomers.Feature') }}</strong></p>
                <strong id="orderWrappingTotal">{{ orderForViewing.prices.wrappingPriceFormatted }}</strong>
              </div>
            {% endif %}

            {% if orderForViewing.prices.shippingPriceRaw %}
              <div class="col-sm text-center shipping-price">
                <p class="text-muted mb-0"><strong>{{ 'Shipping'|trans({}, 'Admin.Catalog.Feature') }}</strong></p>
                <strong id="orderShippingTotal">{{ orderForViewing.prices.shippingPriceFormatted }}</strong>
              </div>

              <span class="partial-refund">
                <p class="text-muted mb-0 text-center"><strong>{{ 'Shipping'|trans({}, 'Admin.Catalog.Feature') }}</strong></p>
                <div class="col-sm text-center shipping-price-container">
                  <strong>{{ orderForViewing.prices.shippingPriceFormatted }}</strong>
                  {{ form_widget(partialRefundForm.shipping) }}
                  <div class="input-group-append">
                    <div class="input-group-text">{{ orderCurrency.symbol }}</div>
                  </div>
                </div>
                <p class="text-center">(max {{ orderForViewing.prices.shippingPriceFormatted }} tax included)</p>
              </span>
            {% endif %}

            {% if not orderForViewing.taxIncluded %}
              <div class="col-sm text-center">
                <p class="text-muted mb-0"><strong>{{ 'Taxes'|trans({}, 'Admin.Global') }}</strong></p>
                <strong id="orderTaxesTotal">{{ orderForViewing.prices.taxesAmountFormatted }}</strong>
              </div>
            {% endif %}

            <div class="col-sm text-center">
              <p class="text-muted mb-0"><strong>{{ 'Total'|trans({}, 'Admin.Global') }}</strong></p>
              <span class="badge rounded badge-dark font-size-100" id="orderTotal">{{ orderForViewing.prices.totalAmountFormatted }}</span>
            </div>

          </div>
        </div>
      </div>
      <div class="col-md-12">
        <p class="mb-0 mt-1 text-center text-muted">
          <small>
            {{ 'For this customer group, prices are displayed as: [1]%tax_method%[/1]'|trans({
              '%tax_method%': orderForViewing.taxMethod,
              '[1]': '<strong>',
              '[/1]': '</strong>'
            }, 'Admin.Orderscustomers.Notification')|raw }}.

            {% if not 'PS_ORDER_RETURN'|configuration %}
              <strong>{{ 'Merchandise returns are disabled'|trans({}, 'Admin.Orderscustomers.Notification') }}</strong>
            {% endif %}
          </small>
        </p>
        <div class="refund-checkboxes-container">
          <div class="form-group">
            {{ form_widget(partialRefundForm.restock) }}
          </div>
          <div class="form-group">
            {{ form_widget(partialRefundForm.voucher) }}
          </div>
        </div>
      </div>
      <div class="partial-refund form-submit text-right">
        <button class="partial-refund partial-refund-cancel btn btn-outline-secondary" type="button">Cancel</button>
        {{ form_widget(partialRefundForm.save) }}
      </div>
    </div>
  </div>
</div>
{{ form_end(partialRefundForm) }}
