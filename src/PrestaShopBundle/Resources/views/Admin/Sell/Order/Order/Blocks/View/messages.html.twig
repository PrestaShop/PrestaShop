{% import '@PrestaShop/Admin/macros.html.twig' as ps %}
<div class="card mt-2">
  <div class="card-header">
    <h3 class="card-header-title">
      {{ 'Messages'|trans({}, 'Admin.Global') }} ({{ orderForViewing.messages.getTotalMessages }})
    </h3>
  </div>

  {% if orderForViewing.messages.messages is not empty %}
    <ul class="list-unstyled p-4 messages-block">
      {% for message in orderForViewing.messages.messages %}
        <li class="mb-2">
          <div class="row">
            {% if not message.employeeId %}
              <div class="col-md-1">
                <i class="material-icons">account_circle</i>
              </div>
              <div class="col-md-11">
                <p class="mb-0 message customer-message">
                  {{ message.message|nl2br }}
                </p>
                <p class="text-muted mb-0">
                  {{ message.customerFirstName ~ ' ' ~ message.customerLastName }}
                  {{ message.date|date('Y-m-d H:i:s') }}
                </p>
              </div>
            {% endif %}

            {% if message.employeeId %}
              <div class="col-md-11">
                <p class="mb-0 message employee-message{{ message.isPrivate ? '--private' : '' }}">
                  {{ message.message|nl2br }}
                </p>
                <p class="text-muted mb-0 text-right">
                  {{ message.employeeFirstName ~ ' ' ~ message.employeeLastName }}
                  {{ message.date|date('Y-m-d H:i:s') }}
                </p>
              </div>
              <div class="col-md-1">
                <i class="material-icons employee-icon{{ message.isPrivate ? '--private' : '' }}"></i>
              </div>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  <div class="card-body">
    {{ form_start(orderMessageForm) }}

    {{ ps.form_group_row(orderMessageForm.order_message, {}, {
      'label': 'Choose your order message'|trans({}, 'Admin.Orderscustomers.Feature'),
      'label_on_top': true,
      'class': 'mb-0'
    }) }}

    <div class="js-order-messages-container d-none">
      <div class="js-message-change-warning">{{ 'Do you want to overwrite your existing message?'|trans({}, 'Admin.Orderscustomers.Notification') }}</div>
      {% for id, message in orderMessageForm.vars['messages'] %}
        <div data-id="{{ id }}">
          {{ message }}
        </div>
      {% endfor %}
    </div>

    <div class="form-group row">
      <div class="col-sm">
        <a href="{{ path('admin_order_messages_index') }}" class="mb-1">
          {{ 'Configure predefined messages'|trans({}, 'Admin.Orderscustomers.Feature') }}
          <i class="material-icons">arrow_right_alt</i>
        </a>
      </div>
    </div>


    {{ ps.form_group_row(orderMessageForm.is_displayed_to_customer, {'material_design': true}) }}

    {{ ps.form_group_row(orderMessageForm.message, {}, {
      'label': 'Message'|trans({}, 'Admin.Global'),
      'label_on_top': true
    }) }}

    {% block order_message_form_rest %}
      {{ form_rest(orderMessageForm) }}
    {% endblock %}

    {{ form_end(orderMessageForm) }}
  </div>
</div>

<div class="card mt-2">
  <div class="card-header">
    <h3 class="card-header-title">
      {{ 'Messages'|trans({}, 'Admin.Global') }} ({{ orderForViewing.payments.payments|length }})
    </h3>
  </div>
  <div class="card-body p-0">



    {% if orderForViewing.messages.messages is not empty %}
      <ul class="list-unstyled p-4" style="background-color: #f8f8f8;">
      {% for message in orderForViewing.messages.messages %}
        <li class="mb-2">
          <div class="row">
            {% if not message.employeeId %}
              <div class="col-md-1">
                <i class="material-icons">person</i>
              </div>
              <div class="col-md-11">
                <p class="mb-0" style="background-color: #fff; padding: 10px; border-radius: 5px;">
                  {{ message.message|nl2br }}
                </p>
                <p class="text-muted mb-0">
                  {{ message.customerFirstName ~ ' ' ~ message.customerLastName }}
                  {{ message.date|date('Y-m-d H:i:s') }}
                </p>
              </div>
            {% endif %}

            {% if message.employeeId %}
              <div class="col-md-11">
                <p class="mb-0" style="background-color: #d3f1f7; padding: 10px; border-radius: 5px;">
                  {{ message.message|nl2br }}
                </p>
                <p class="text-muted mb-0 text-right">
                  {{ message.employeeFirstName ~ ' ' ~ message.employeeLastName }}
                  {{ message.date|date('Y-m-d H:i:s') }}
                </p>
              </div>
              <div class="col-md-1">
                <i class="material-icons" style="color: #36b9d7;">person</i>
              </div>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
    {% endif %}

    <form class="form p-3" action="">
      <div class="form-group">
        <label class="form-control-label" for="input4">
          {{ 'Choose your order message'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </label>
        <select name="" id="" class="form-control">
          <option value="1">--</option>
        </select>
      </div>

      <div class="form-group">
        <div class="md-checkbox">
          <label>
            <input type="checkbox" name="checkbox[]">
            <i class="md-checkbox-control"></i>
            {{ 'Display to customer?'|trans({}, 'Admin.Orderscustomers.Feature') }}
          </label>
        </div>
      </div>

      <div class="form-group mb-1">
        <label class="form-control-label" for="input4">
          {{ 'Message'|trans({}, 'Admin.Global') }}
        </label>
        <textarea name="" id="" cols="30" rows="3" class="form-control"></textarea>
        <small class="text-muted">0/600</small>
      </div>

      <div class="mb-2">
        <a href="#" class="btn btn-outline-secondary">
          {{ 'Show all'|trans({}, 'Admin.Actions') }}
          <i class="material-icons">open_in_new</i>
        </a>
        <button type="submit" class="btn btn-primary float-right">
          {{ 'Send message'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </button>
      </div>
    </form>
  </div>
</div>

