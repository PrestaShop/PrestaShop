<div class="modal fade" id="viewAllMessagesModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="card-header-title">
              {{ 'Message history with %name%'|trans({'%name%': orderForViewing.customer.firstName ~ ' ' ~ orderForViewing.customer.lastName}, 'Admin.Global') }} ({{ orderForViewing.messages.messages|length }})
            </h3>
          </div>
          <div class="col">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <i class="material-icons">
                close
              </i>
            </button>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <ul class="list-unstyled p-4 messages-block" id="all-messages-list">
          {% for message in orderForViewing.messages.messages|reverse %}
            {% include '@PrestaShop/Admin/Sell/Order/Order/Blocks/View/msg_list_item.html.twig' %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
