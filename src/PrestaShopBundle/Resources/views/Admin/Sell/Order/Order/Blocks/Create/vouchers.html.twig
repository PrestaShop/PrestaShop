<div class="card d-none" id="vouchers-block">
  <h3 class="card-header">
    {{ 'Vouchers'|trans({}, 'Admin.Orderscustomers.Feature') }}
  </h3>
  <div class="card-body">
    <div class="row">
      <div class="col-3">
        <span class="float-right">{{ 'Search for a voucher'|trans({}, 'Admin.Orderscustomers.Feature') }}</span>
      </div>
      <div class="col-4">
        <input type="text" class="form-control" id="search-vouchers-input">
      </div>
      <div class="col">
        <span class="mr-2">{{ 'or'|trans({}, 'Admin.Global') }}</span>
        <button class="btn btn-primary" type="button">
          {{ 'Add new voucher'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </button>
      </div>
    </div>
    <table class="table d-none" id="vouchers-table">
      <thead>
      <tr>
        <th>{{ 'Name'|trans({}, 'Admin.Global') }}</th>
        <th>{{ 'Description'|trans({}, 'Admin.Global') }}</th>
        <th>{{ 'Value'|trans({}, 'Admin.Global') }}</th>
        <th></th>
      </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>

<script id="vouchers-table-row-template" type="text/html">
  <tr>
    <td class="js-voucher-name"></td>
    <td class="js-voucher-description"></td>
    <td class="js-voucher-value"></td>
    <td class="text-right">
      <button class="btn btn-outline-danger js-voucher-delete">{{ 'Delete'|trans({}, 'Admin.Global') }}</button>
    </td>
  </tr>
</script>

