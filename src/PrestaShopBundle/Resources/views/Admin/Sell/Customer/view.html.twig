{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}

{% block content %}
  {{ dump(customerInformation) }}

  <div class="row">
    <div class="col">
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/personal_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/orders_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/carts_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/bought_products_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/viewed_products_information.html.twig' %}
    </div>

    <div class="col">
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/private_note_block.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/messages_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/discounts_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/sent_emails_information.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/last_connections.html.twig' %}
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/groups.html.twig' %}
    </div>
  </div>

  <div class="row">
    {{ renderhook('displayAdminCustomers', {'id_customer': customerInformation.customerId.value}) }}

    <div class="col">
      {% include '@PrestaShop/Admin/Sell/Customer/Blocks/View/addresses_information.html.twig' %}
    </div>
  </div>
{% endblock %}
