<div class="card">
  <h3 class="card-header">
    {{ 'Addresses'|trans({}, 'Admin.Global') }}
    ({{ viewableManufacturer.manufacturerAddresses|length }})
  </h3>
  <div class="card-body">
    {% if viewableManufacturer.manufacturerAddresses is not empty %}
      {% for address in viewableManufacturer.manufacturerAddresses %}
        <div class="card">
          <div class="card-header clearfix">
            {{ address.first_name }} {{ address.last_name }}
            <div class="d-inline-block float-right">
              <a class="btn btn-primary btn-sm"
                 href="{{ getAdminLink('AdminManufacturers', true, {'id_address': address.id, 'editaddresses': 1}) }}">
                {{ 'Edit'|trans({}, 'Admin.Actions') }}
              </a>
            </div>
          </div>
          <div class="card-body">
            <p class="mb-0">{{ address.address1 }}</p>
            <p class="mb-0">{{ address.address2 }}</p>
            <p class="mb-0">{{ address.city }}</p>
            {% if address.state %}
              <p class="mb-0">{{ address.state }}</p>
            {% endif %}
            <p class="mb-0"><strong>{{ address.country }}</strong></p>
            {% if address.phone %}
              <p class="mb-0">{{ address.phone }}</p>
            {% endif %}
            {% if address.phone_mobile %}
              <p class="mb-0">{{ address.phone_mobile }}</p>
            {% endif %}
            {% if address.other %}
              <div class="mt-1">
                <em>{{ address.other|nl2br }}</em>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% else %}
      {{ 'No address has been found for this brand.'|trans({}, 'Admin.Catalog.Notification') }}
    {% endif %}
  </div>
</div>
