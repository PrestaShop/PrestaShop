{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% form_theme combinationForm 'PrestaShopBundle:Admin/TwigTemplateForm:prestashop_ui_kit.html.twig' %}

{% block content %}
<div class="row justify-content-center">
  <div class="col-sm-12">
    {{ form_start(combinationForm, {'attr': {'class': 'form-horizontal combination-page', 'novalidate': 'novalidate'}}) }}
    <div class="card">
      <div class="card-header">
        {{ 'Combination details'|trans({}, 'Admin.Catalog.Feature') }} -
        {{ combinationForm.vars.value.name }}
      </div>
      <div class="card-block row">
        <div id="{{ combinationForm.vars.id }}">
          {{ form_row(combinationForm.stock) }}
          {{ form_row(combinationForm.price_impact) }}
          {{ form_row(combinationForm.details) }}

          <h2>{{ 'Suppliers'|trans({}, 'Admin.Global') }}</h2>
          <div class="alert alert-info" role="alert">
            <p class="alert-text">
              {{ 'This interface allows you to specify the suppliers of the current combination.'|trans({}, 'Admin.Catalog.Help')|raw }}<br>
              {{ 'You can specify supplier references according to previously associated suppliers.'|trans({}, 'Admin.Catalog.Help')|raw }}
            </p>
          </div>
          {{ include('@PrestaShop/Admin/Sell/Catalog/Product/Blocks/suppliers.html.twig', {
            'suppliersForm': combinationForm.suppliers,
          }) }}

          {{ form_rest(combinationForm) }}
        </div>
      </div>
    </div>
    {{ form_end(combinationForm) }}
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('themes/new-theme/public/combination_edit.bundle.js') }}"></script>
{% endblock %}
