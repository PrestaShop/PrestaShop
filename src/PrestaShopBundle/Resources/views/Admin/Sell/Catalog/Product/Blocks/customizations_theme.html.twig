{%- block customizations_widget -%}
  <div class="col-md-12">
    <h2>{{ 'Customization'|trans({}, 'Admin.Catalog.Feature') }}</h2>
    <ul class="list-unstyled" id="customizationFieldsList">
      {{ form_row(form.customization_fields) }}
    </ul>
    <button type="button" class="btn btn-outline-secondary" id="addCustomizationBtn">
      <i class="material-icons">add_circle</i>
      {{ 'Add a customization field'|trans({}, 'Admin.Catalog.Feature') }}
    </button>
  </div>
{%- endblock customizations_widget -%}

{%- block customization_field_row -%}
  <li class="form-group row">
    <div class="col-md-5">{{ form_widget(form.name) }}</div>
    <div class="col-md-4">{{ form_widget(form.type) }}</div>
    <div class="col-md-1">
      <button type="button" class="btn text-secondary">
        <i class="material-icons">delete</i>
      </button>
    </div>
    <div class="col-md-2">{{ form_widget(form.required) }}</div>
  </li>
{%- endblock customization_field_row -%}

{%- block _product_customizations_customization_fields_row -%}
    {{- block('form_rows') -}}
{%- endblock _product_customizations_customization_fields_row -%}
