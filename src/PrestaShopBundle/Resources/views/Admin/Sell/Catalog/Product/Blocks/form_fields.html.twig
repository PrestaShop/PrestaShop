{%- block supplier_references_row -%}
<div class="row" id="supplier_reference_row_{% if form.vars.value is not null %}{{ form.vars.value.supplier_id }}{% else %}__SUPPLIER_ID__{% endif %}">
  <div class="col">
    {# We need to check if value is not null because in prototype it is null else we display a placeholder #}
    <div>{% if form.vars.value is not null %}{{ form.vars.value.supplier_name }}{% else %}__SUPPLIER_NAME__{% endif %}</div>
    <table class="table">
      <thead class="thead-default">
      <tr>
        <th>{{ 'Product name'|trans({}, 'Admin.Catalog.Feature') }}</th>
        <th>{{ 'Supplier reference'|trans({}, 'Admin.Catalog.Feature') }}</th>
        <th>{{ 'Cost price (tax excl.)'|trans({}, 'Admin.Catalog.Feature') }}</th>
        <th>{{ 'Currency'|trans({}, 'Admin.Global') }}</th>
      </tr>
      </thead>
      {{ form_row(form.product_suppliers_collection) }}
    </table>
  </div>
</div>
{%- endblock supplier_references_row -%}

{%- block product_supplier_row -%}
  <tr>
    {# We need to check if value is not null because in prototype it is null else we display a placeholder #}
    <td>{% if form.vars.value is not null %}{{ form.vars.value.product_name }}{% else %}__PRODUCT_NAME__{% endif %}</td>
    <td>{{ form_widget(form.supplier_reference) }}</td>
    <td>{{ form_widget(form.supplier_price_tax_excluded) }}</td>
    <td>{{ form_widget(form.currency_id) }}</td>
  </tr>
{%- endblock product_supplier_row -%}

{# Override suppliers reference collection template to remove the label column #}
{%- block _product_suppliers_supplier_references_row -%}
  {% if prototype is defined %}
    {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
  {% endif %}
  <div class="form-group row supplier_references_row" {{ block('widget_attributes') }}>
    <div class="col-sm">
      {{- block('form_rows') -}}
    </div>
  </div>
{%- endblock -%}

{%- block _product_suppliers_supplier_references_entry_product_suppliers_collection_row -%}
  {% if prototype is defined %}
    {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
  {% endif %}
  <tbody class="product_suppliers_collection" {{ block('widget_attributes') }}>
    {{- block('form_rows') -}}
  </tbody>
{%- endblock -%}
