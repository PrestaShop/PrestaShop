{%- block supplier_references_row -%}
  <tr class="product_supplier_row" id="product_supplier_row_{% if form.vars.value is not null %}{{ form.vars.value.supplier_id }}{% else %}__SUPPLIER_ID__{% endif %}">
    {{ form_widget(form.supplier_id) }}
    {{ form_widget(form.product_supplier.product_supplier_id) }}
    <td>{% if form.supplier_name.vars.value %}{{ form.supplier_name.vars.value }}{% else %}__SUPPLIER_NAME__{% endif %}</td>
    <td>{{ form_widget(form.product_supplier.supplier_reference) }}</td>
    <td>{{ form_widget(form.product_supplier.supplier_price_tax_excluded) }}</td>
    <td>{{ form_widget(form.product_supplier.currency_id) }}</td>
  </tr>
{%- endblock supplier_references_row -%}

{# Override suppliers reference collection template to remove the label column #}
{%- block _product_suppliers_supplier_references_row -%}
  {% if prototype is defined %}
    {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
  {% endif %}
  <div class="form-group row" {{ block('widget_attributes') }}>
    <div class="col-sm">
      {{- block('form_rows') -}}
    </div>
  </div>
{%- endblock -%}
