{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  {% block categories_kpis_row %}
    <div class="col-md-12">
      <div class="card">
        <div class="row">
          {{ render(controller(
            'PrestaShopBundle:Admin\\Common:renderKpiRow',
            { 'kpiRow': categoriesKpi }
          )) }}
        </div>
      </div>
    </div>
  {% endblock %}

  {% block categories_listing %}
    <div class="col-md-12">
      {{ include('@PrestaShop/Admin/Common/Grid/grid_panel.html.twig', {'grid': categoriesGrid }) }}
    </div>
  {% endblock %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('themes/default/js/bundle/pagination.js') }}"></script>
  <script src="{{ asset('themes/new-theme/public/categories.bundle.js') }}"></script>
{% endblock %}
