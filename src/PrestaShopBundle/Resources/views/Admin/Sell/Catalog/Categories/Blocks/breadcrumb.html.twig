<div class="col-md-12">
  <div class="card">
    <div class="card-block">
      <nav>
        <ol class="breadcrumb">
          {% for category in currentCategoryTree %}
            <li class="breadcrumb-item">
              {% if category.id_category == currentCategoryId %}
                <span>{{ category.name }}</span>
                <a href="{{ getAdminLink('AdminCategories', true, {'id_category': category.id_category, 'updatecategory': 1}) }}">
                  <i style="font-size: 16px;" class="material-icons">edit</i>
                  {{ 'Edit'|trans({}, 'Admin.Actions') }}
                </a>
              {% else %}
                <a href="{{ path('admin_category_listing', {'id_category': category.id_category}) }}">
                  {{ category.name }}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ol>
      </nav>
    </div>
  </div>
</div>
