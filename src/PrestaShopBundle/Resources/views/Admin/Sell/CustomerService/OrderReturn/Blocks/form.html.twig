{{ form_start(orderReturnForm, {action: path('admin_order_returns_update', {'orderReturnId': editableOrderReturn.orderReturnId})}) }}
<div class="card">
  <h3 class="card-header">
    <i class="material-icons">person</i>
    {{ 'Merchandise returns'|trans({}, 'Admin.Orderscustomers.Feature') }}
  </h3>

  <div class="card-block row">
    <div class="card-text">
      {{ form_errors(orderReturnForm) }}

      <div class="form-group row">
        <label class="form-control-label">
          {{ 'Customer'|trans({}, 'Admin.Global') }}
        </label>

        <div class="col-sm form-control-value">
          <p>{{ editableOrderReturn.customerFullName }}</p>

          <a href="{{ path('admin_customers_view', {'customerId': editableOrderReturn.customerId }) }}" class="btn btn-outline-secondary">
            {{ 'View details on the customer page.'|trans({}, 'Admin.Orderscustomers.Help') }}
          </a>
        </div>
      </div>

      <div class="form-group row">
        <label class="form-control-label">
          {{ 'Order'|trans({}, 'Admin.Global') }}
        </label>

        <div class="col-sm form-control-value">
          <p>#{{ editableOrderReturn.orderId }} {{ 'from'|trans({}, 'Admin.Global') }} {{ editableOrderReturn.orderDate.format('d/m/y') }}</p>

          <a href="{{ path('admin_orders_view', {'orderId': editableOrderReturn.orderId }) }}" class="btn btn-outline-secondary">
            {{ 'View details on the order page.'|trans({}, 'Admin.Orderscustomers.Help') }}
          </a>
        </div>
      </div>

      <div class="form-group row">
        <label class="form-control-label">
          {{ 'Customer explanation'|trans({}, 'Admin.Orderscustomers.Feature') }}
        </label>

        <div class="col-sm form-control-value">
          <p>{{ editableOrderReturn.question }}</p>
        </div>
      </div>

      {% block order_return_form_rest %}
        {{ form_widget(orderReturnForm) }}
      {% endblock %}
    </div>
  </div>

  <div class="card-footer">
    <a href="{{ path('admin_merchandise_returns_index') }}" class="btn btn-outline-secondary">
      {{ 'Cancel'|trans({}, 'Admin.Actions') }}
    </a>

    <button class="btn btn-primary float-right">
      {{ 'Save'|trans({}, 'Admin.Actions') }}
    </button>
  </div>
</div>
{{ form_end(orderReturnForm) }}

{% block order_returns_products %}
  <div class="row">
    <div class="col-12">
      {% include '@PrestaShop/Admin/Common/Grid/grid_panel.html.twig' with {'grid': orderReturnsProductsGrid} %}
    </div>
  </div>
{% endblock %}
