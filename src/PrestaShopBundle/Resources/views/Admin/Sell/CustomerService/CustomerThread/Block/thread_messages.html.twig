<div class="row">
  <div class="col">
    <ul class="list-unstyled ml-5">
      {% for message in customerThreadView.messages %}
        {% if not loop.first %}
          <li>
            <hr class="mb-3 mt-0">
          </li>
        {% endif %}

        <li class="media">
          {% if message.type == 'customer' %}
            <i class="material-icons" style="font-size: 48px;">person</i>
          {% else %}
            <img class="rounded-circle"
                 src="{{ message.employee_image }}"
                 style="width: 48px; height: 48px;"
            >
          {% endif %}

          <div class="media-body ml-2">
            <h4 class="mt-0 mb-1">
              <i class="material-icons text-muted">reply</i>

              {% if message.type == 'customer' %}
                {{ message.customer_name }}
              {% else %}
                {{ message.employee_name }}
              {% endif %}

              <span class="text-muted">
                <i class="material-icons text-muted" style="font-size: 16px;">calendar_today</i>
                -
                {{ format_date(message.date_add) }}
                <i class="material-icons text-muted" style="font-size: 16px;">access_time</i>
                -
                {{ message.date_add|date('H:i') }}
              </span>

              {% if message.file_name is defined %}
                <i class="material-icons" style="font-size: 16px;">attachment</i>
                <a href="{{ message.file_name }}" target="_blank">
                  {{ 'Attachment'|trans({}, 'Admin.Catalog.Feature') }}
                </a>
              {% endif %}

              {% if message.id_product %}
                <i class="material-icons" style="font-size: 16px;">library_books</i>
                <a href="{{ path('admin_product_form', {'id': message.id_product}) }}">
                  {{ 'Product'|trans({}, 'Admin.Global') }}
                  {{ message.product_name }}
                </a>
              {% endif %}
            </h4>
            <p style="border-left: 2px solid #ccc;" class="pl-2">{{ message.message|nl2br }}</p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
