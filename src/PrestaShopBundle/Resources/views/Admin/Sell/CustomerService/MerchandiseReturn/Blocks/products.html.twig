{% set paginationNum = 8 %}

<table class="table" id="merchandiseReturnProductsTable">
  <thead>
  <tr>
    <th>
      <p>{{ 'Product'|trans({}, 'Admin.Global') }}</p>
    </th>
    <th>
      <p>{{ 'Quantity'|trans({}, 'Admin.Global') }}</p>
    </th>
    <th class="text-right product_actions d-print-none">
      <p>{{ 'Actions'|trans({}, 'Admin.Global') }}</p>
    </th>
  </tr>
  </thead>
  <tbody>
  {% for product in merchandiseReturnProductsForViewing.products %}
    {% include '@PrestaShop/Admin/Sell/CustomerService/MerchandiseReturn/Blocks/product.html.twig' with {
      'product': product,
      'productIndex': loop.index,
      'paginationNum': paginationNum,
    } %}
  {% endfor %}

  <div class="row mb-3">
    <div class="col-md-4 text-left d-print-none">
      {% set numPages = (merchandiseReturnProductsForViewing.products|length / paginationNum)|round(0, 'ceil') %}
      <nav aria-label="Products Navigation"{% if merchandiseReturnProductsForViewing.products|length <= paginationNum %} class="d-none"{% endif %} id="merchandiseReturnProductsNavPagination">
        <ul class="pagination" id="merchandiseReturnProductsTablePagination" data-num-per-page="{{ paginationNum }}" data-num-pages="{{ numPages }}">
          <li class="page-item disabled" id="merchandiseReturnProductsTablePaginationPrev">
            <a class="page-link" href="javascript:void(0);" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          {% for numPage in 1..numPages %}
            <li class="page-item{% if numPage==1 %} active{% endif %}"><span class="page-link" data-merchandise-return-id="{{ editableMerchandiseReturn.merchandiseReturnId.value }}" data-page="{{ numPage }}">{{ numPage }}</span></li>
          {% endfor %}
          <li class="page-item d-none"><span class="page-link" data-merchandise-return-id="{{ editableMerchandiseReturn.merchandiseReturnId.value }}" data-page=""></span></li>
          <li class="page-item" id="merchandiseReturnProductsTablePaginationNext">
            <a class="page-link" href="javascript:void(0);" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </tbody>
</table>
