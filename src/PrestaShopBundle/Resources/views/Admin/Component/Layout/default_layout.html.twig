<!DOCTYPE html>
<html lang="{{ this.isoUser }}">
<head>
  {% block header %}
{#    {{ component('Header', {#}
{#      meta_title: meta_title,#}
{#      shop_context: shop_context,#}
{#      css_files: css_files,#}
{#      js_files: js_files|default([]),#}
{#      js_inline: js_inline|default([]),#}
{#      displayBackOfficeHeader: displayBackOfficeHeader|default(null)#}
{#    }) }}#}
    {% block stylesheets %}{% endblock %}
    {% block extra_stylesheets %}{% endblock %}
  {% endblock %}
</head>

<body
  class="lang-{{ this.isoUser }}{% if this.langIsRtl %} lang-rtl{% endif %} {{ this.controllerName|escape|lower }}{% if this.collapseMenu %} page-sidebar-closed{% endif %}{% if this.multiShop|default(false) %} multishop-enabled{% endif %}{% if this.debugMode|default(false) %} developer-mode{% endif %}"
  {% if this.jsRouterMetadata is defined and this.jsRouterMetadata.base_url is defined %}data-base-url="{{ this.jsRouterMetadata.base_url }}"{% endif %}
  {% if this.jsRouterMetadata is defined and this.jsRouterMetadata.token %}data-token="{{ this.jsRouterMetadata.token }}"{% endif %}
>

{# Layout header #}
{% if display_header %}
  {% block layout_header %}
    <header id="header" class="d-print-none">
      <nav id="header_infos" class="main-header">
        <button class="btn btn-primary-reverse onclick btn-lg unbind ajax-spinner"></button>

        {# Logo #}
        <i class="material-icons js-mobile-menu">menu</i>
        <a id="header_logo" class="logo float-left" href="{{ this.defaultTabLink }}"></a>
        <span id="shop_version">{{ this.psVersion }}</span>

        {# TODO: Refactor this, insert div inside component#}
        <div class="component" id="quick-access-container">
          {{ component('QuickAccess') }}
        </div>
        <div class="component component-search" id="header-search-container">
          <div class="component-search-body">
            <div class="component-search-top">
              {# TODO: Refactor this, insert div inside component#}
              {{ component('SearchForm') }}
              <button class="component-search-cancel d-none">
                {{ 'Cancel'|trans({}, 'Admin.Actions') }}
              </button>
            </div>
            {# TODO: Uncomment when independant #}
            {# {{ component('MobileQuickAccess') }}#}
          </div>

          <div class="component-search-background d-none"></div>
        </div>

        {% if this.debugMode|default(false) %}
          <div class="component hide-mobile-sm" id="header-debug-mode-container">
            <a class="link shop-state"
               id="debug-mode"
               data-toggle="pstooltip"
               data-placement="bottom"
               data-html="true"
               title="<p class=&quot;text-left&quot;><strong>{{ 'Your shop is in debug mode.'|trans({}, 'Admin.Navigation.Notification') }}</strong></p><p class=&quot;text-left&quot;>{{ 'All the PHP errors and messages are displayed. When you no longer need it, [1]turn off[/1] this mode.'|trans({'[1]': '<strong>', '[/1]': '</strong>'}, 'Admin.Navigation.Notification') }}</p>"
               href="{{ url('admin_performance') }}"
            >
              <i class="material-icons">bug_report</i>
              <span>{{ 'Debug mode'|trans({}, 'Admin.Navigation.Header') }}</span>
            </a>
          </div>
        {% endif %}

        {% if this.maintenanceMode|default(false) %}
          {% set maintenanceTitle %}
            <p class="text-left text-nowrap">
              <strong>
                {{ 'Your store is in maintenance mode.'|trans({}, 'Admin.Navigation.Notification') }}
              </strong>
            </p>
            <p class="text-left">
              {{ 'Your visitors and customers cannot access your store while in maintenance mode.'|trans({}, 'Admin.Navigation.Notification') }}
            </p>
            <p class="text-left">
              {{ 'To manage the maintenance settings, go to Shop Parameters > Maintenance tab.'|trans({}, 'Admin.Navigation.Notification') }}
            </p>
            {% if this.maintenanceAllowAdmins|default(false) %}
              <p class="text-left">
                {{ 'Admins can access the store front office without storing their IP.'|trans({}, 'Admin.Navigation.Notification') }}
              </p>
            {% endif %}
          {% endset %}
          <div class="component hide-mobile-sm" id="header-maintenance-mode-container">
            <a class="link shop-state"
               id="maintenance-mode"
               data-toggle="pstooltip"
               data-placement="bottom"
               data-html="true"
               title="{{ maintenanceTitle|e('html') }}"
               href="{{ url('admin_maintenance') }}"
            >
              <i class="material-icons"
                 style="{% if this.maintenanceAllowAdmins|default(false) %}color: var(--green);{% endif %}"
              >build</i>
              <span>{{ 'Maintenance mode'|trans({}, 'Admin.Navigation.Header') }}</span>
            </a>
          </div>
        {% endif %}

        <div class="header-right">
          {# TODO: Refactor this, insert condition and div inside component#}
          {% if this.showNewOrders or this.showNewCustomers or this.showNewMessages %}
            <div class="component header-right-component" id="header-notifications-container">
              {{ component('NotificationsCenter') }}
            </div>
          {% endif %}

          {# TODO: Refactor this, insert div inside component#}
          <div class="component" id="header-employee-container">
            {{ component('EmployeeDropdown') }}
          </div>
          {% if displayBackOfficeTop is defined %}
            {{ displayBackOfficeTop }}
          {% endif %}
        </div>
      </nav>
    </header>

    {{ component('NavBar') }}
  {% endblock %}
{% endif %}

{# Page header toolbar #}
{% if showContentHeader %}
  {% component Toolbar with {
    lockedToAllShopContext: locked_to_all_shop_context,
    title: layoutTitle,
    toolbarBtn: toolbar_btn,
    table: table,
    helpLink: help_link,
    enableSidebar: enableSidebar
  } %}
    {% block pageTitle %}{{ block(outerBlocks.pageTitle) ?: parent() }}{% endblock %}
  {% endcomponent %}
{% endif %}

<div id="main-div">
  {% if this.installDirExists %}
    <div class="alert alert-warning">
      {{ 'For security reasons, you must also delete the /install folder.'|trans({}, 'Admin.Login.Notification') }}
    </div>
  {% else %}

    <div
      class="{% if display_header %}content-div{% endif %}{% if showContentHeader is same as(false) %} -notoolbar{% endif %}{% if this.currentTabLevel == 3 %} with-tabs{% endif %}">
      {{ renderhook('displayAdminAfterHeader', {}) }}

      <div id="ajax_confirmation" class="alert alert-success" style="display: none;"></div>
      <div id="content-message-box"></div>

      {# Page content blocks #}
      {% block content_header %}{% endblock %}
      {% block content %}{% endblock %}
      {% block content_footer %}{% endblock %}
      {% block sidebar_right %}{% endblock %}

      {{ renderhook('displayAdminEndContent', {}) }}
    </div>
  {% endif %}
</div>

<div class="mobile-layer"></div>

{% if display_footer %}
  {{ component('Footer') }}
{% endif %}

{#{% if modals is defined %}#}
{#  {{ modals }}#}
{#{% endif %}#}

{# Javascript blocks #}
{% block javascripts %}{% endblock %}
{% block extra_javascripts %}{% endblock %}
{% block translate_javascripts %}{% endblock %}

</body>
</html>
