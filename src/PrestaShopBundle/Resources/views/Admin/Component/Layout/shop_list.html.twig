{% if isMultishop
and shopList
and (
  multishopContext is defined
  and multishopContext b-and constant('Shop::CONTEXT_GROUP')
  or multishopContext b-and constant('Shop::CONTEXT_SHOP')
 or multishopContext b-and constant('Shop::CONTEXT_ALL')
)%}
<div id="shop-list" class="shop-list dropdown ps-dropdown stores">
  <button class="btn btn-link" type="button" data-toggle="dropdown">
      <span class="selected-item">
        <i class="material-icons visibility">visibility</i>
        {% if currentShopName is same as null or currentShopName == '' %}
          {{ 'All stores'|trans({}, 'Admin.Global') }}
        {% else %}
          {{ currentShopName }}
        {% endif %}
        <i class="material-icons arrow-down">arrow_drop_down</i>
      </span>
  </button>
  <div class="dropdown-menu dropdown-menu-right ps-dropdown-menu">
    {{ shopList }}
  </div>
</div>
{% else %}
<div class="shop-list">
  <a class="link" id="header_shopname" href="{{ baseUrl|escape('html_attr') }}" target= "_blank">
    <i class="material-icons">visibility</i>
    <span>{{ 'View my store'|trans({}, 'Admin.Navigation.Header') }}</span>
  </a>
</div>
{% endif %}
