<div class="header-toolbar d-print-none">
  {{ component('MultistoreHeader', {lockedToAllShopContext: lockedToAllShopContext}) }}
  <div class="container-fluid">

    {% block pageBreadcrumb %}
      <nav aria-label="Breadcrumb">
        <ol class="breadcrumb">
          {% if breadcrumbs.container.name != '' %}
            <li class="breadcrumb-item">{{ breadcrumbs.container.name|escape }}</li>
          {% endif %}

          {% if breadcrumbs.tab.name != '' and breadcrumbs.container.name != breadcrumbs.tab.name and breadcrumbs.tab.href != '' %}
            <li class="breadcrumb-item active">
              <a href="{{ breadcrumbs.tab.href|escape }}" aria-current="page">{{ breadcrumbs.tab.name|escape }}</a>
            </li>
          {% endif %}
        </ol>
      </nav>
    {% endblock %}

    {% set persistent_help_btn = this.help_link is defined and this.help_link is not same as (false) and this.toolbarBtn is empty %}
    <div class="title-row {% if persistent_help_btn %}flex-nowrap flex-md-wrap{% endif %}">
      {% block pageTitle %}
        {% if useRegularH1Structure %}
          <h1 class="title">
            {% if title is iterable and title is not empty %}
              {{ title|last|e }}
            {% else %}
              {{ title|e }}
            {% endif %}
          </h1>
        {% else %}
          {% autoescape false %}
            {{ title }}
          {% endautoescape %}
        {% endif %}
      {% endblock %}

      {% block toolbarBox %}
        <div class="toolbar-icons{% if persistent_help_btn %} toolbar-icons--persistent{% endif %}">
          <div class="wrapper">
            {{ renderhook('displayDashboardToolbarTopMenu') }}
            {% for k, btn in this.toolbarBtn %}
              {% if k != 'back' and k != 'modules-list' %}
                {#TODO: REFACTOR ALL THIS THINGS#}
                <a
                  class="btn {% if btn.class is defined and btn.class %}{{ btn.class|escape }}{% else %}btn-primary{% endif %}{% if btn.target is defined and btn.target %} _blank{% endif %}{% if btn.disabled is defined and btn.disabled %} disabled auto-pointer-events{% endif %} pointer"{% if btn.href is defined %}
                  id="page-header-desc-{{ table }}-{% if btn.imgclass is defined %}{{ btn.imgclass|escape }}{% else %}{{ k }}{% endif %}"
                href="{{ btn.href|escape }}"{% endif %}
                  title="{% if btn.help is defined %}{{ btn.help }}{% else %}{{ btn.desc|escape }}{% endif %}"{% if btn.js is defined and btn.js %}
                  onclick="{{ btn.js }}" {% endif %}{% if btn.modal_target is defined and btn.modal_target %}
                  data-target="{{ btn.modal_target }}"
                  data-toggle="modal"{% endif %}{% if btn.help is defined %}
                  data-toggle="pstooltip"
                  data-placement="bottom"{% endif %}
                  {% if btn.data_attributes is defined and btn.data_attributes %}
                    {% for attribute_name, attribute_value in btn.data_attributes %}
                      data-{{ attribute_name }}="{{ attribute_value }}"
                    {% endfor %}
                  {% endif %}
                >
                  {% if btn.icon is not empty %}<i class="material-icons">{{ btn.icon }}</i>{% endif %}
                  {{ btn.desc|escape }}
                </a>
              {% endif %}
            {% endfor %}
            {% if this.toolbarBtn['modules-list'] is defined %}
              {#TODO: REFACTOR ALL THIS THINGS#}
              <a
                class="btn btn-outline-secondary {% if this.toolbarBtn['modules-list'].target is defined and this.toolbarBtn['modules-list'].target %} _blank{% endif %}"
                id="page-header-desc-{{ table }}-{% if this.toolbarBtn['modules-list'].imgclass is defined %}{{ this.toolbarBtn['modules-list'].imgclass }}{% else %}modules-list{% endif %}"
                {% if this.toolbarBtn['modules-list'].href is defined %}href="{{ this.toolbarBtn['modules-list'].href }}"{% endif %}
                title="{{ this.toolbarBtn['modules-list'].desc }}"
                {% if this.toolbarBtn['modules-list'].js is defined and this.toolbarBtn['modules-list'].js %}onclick="{{ this.toolbarBtn['modules-list'].js }}"{% endif %}
              >
                {{ this.toolbarBtn['modules-list'].desc }}
              </a>
            {% endif %}

            {% if this.helpLink is defined and this.helpLink is not same as false %}

              {% if this.enableSidebar %}

                <a class="toolbar-button btn-sidebar d-inline-block d-md-none" href="#"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                   data-toggle="sidebar"
                   data-target="#right-sidebar"
                   data-url="{{ this.helpLink|escape }}"
                   id="product_form_open_help_mobile"
                >
                  <i class="material-icons">help_outline</i>
                </a>
                <a class="btn btn-outline-secondary btn-help btn-sidebar d-none d-md-inline-block" href="#"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                   data-toggle="sidebar"
                   data-target="#right-sidebar"
                   data-url="{{ this.helpLink|escape }}"
                   id="product_form_open_help"
                >
                  {{ 'Help'|trans({}, 'Admin.Global') }}
                </a>
              {% else %}
                <a class="toolbar-button d-inline-block d-md-none" href="{{ this.helpLink|escape }}"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}">
                  <i class="material-icons">help_outline</i>
                </a>
                <a class="btn btn-outline-secondary btn-help d-none d-md-inline-block" href="{{ this.helpLink|escape }}"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}">{{ 'Help'|trans({}, 'Admin.Global') }}
                </a>
              {% endif %}
            {% endif %}
          </div>
        </div>
      {% endblock %}
    </div>
  </div>

  {% if headerTabContent is defined and headerTabContent %}
    <div class="page-head-tabs" id="head_tabs">
      {% for tabContent in headerTabContent %}
        {{ tabContent }}
      {% endfor %}
    </div>
  {% endif %}

  {% if currentTabLevel is same as 3 %}
    <div class="page-head-tabs" id="head_tabs">
      <ul class="nav nav-pills">
        {% for level_1 in tabs %}
          {% for level_2 in level_1.sub_tabs %}
            {% for level_3 in level_2.sub_tabs %}
              {% if level_3.current %}
                {% for level_4 in level_3.sub_tabs %}
                  {% if level_4.active %}
                    <li class="nav-item">
                      <a href="{{ level_4.href }}" id="subtab-{{ level_4.class_name }}"
                         class="nav-link tab {% if level_4.current %}active current{% endif %}"
                         data-submenu="{{ level_4.id_tab }}">
                        {{ level_4.name }}
                        <span class="notification-container">
                        <span class="notification-counter"></span>
                      </span>
                      </a>
                    </li>
                  {% endif %}
                {% endfor %}
              {% endif %}
            {% endfor %}
          {% endfor %}
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% if this.toolbarBtn is not empty %}
    <div class="btn-floating">
      <button class="btn btn-primary collapsed" data-toggle="collapse" data-target=".btn-floating-container"
              aria-expanded="false">
        <i class="material-icons">add</i>
      </button>
      <div class="btn-floating-container collapse">
        <div class="btn-floating-menu">
          {{ renderhook('displayDashboardToolbarTopMenu') }}

          {% for k, btn in this.toolbarBtn %}
            {% if k != 'back' and k != 'modules-list' %}
              <a
                class="btn btn-floating-item {% if btn.floating_class is defined and btn.floating_class %}{{ btn.floating_class|escape }}{% endif %} {% if btn.target is defined and btn.target %} _blank{% endif %} pointer"{% if btn.href is defined %}
                id="page-header-desc-floating-{{ table }}-{% if btn.imgclass is defined %}{{ btn.imgclass|escape }}{% else %}{{ k }}{% endif %}"
              href="{{ btn.href|escape }}"{% endif %}
                title="{% if btn.help is defined %}{{ btn.help }}{% else %}{{ btn.desc|escape }}{% endif %}"{% if btn.js is defined and btn.js %}
              onclick="{{ btn.js }}"{% endif %}{% if btn.modal_target is defined and btn.modal_target %}
                data-target="{{ btn.modal_target }}"
                data-toggle="modal"{% endif %}{% if btn.help is defined %}
                data-toggle="pstooltip"
                data-placement="bottom"{% endif %}
              >
                {{ btn.desc|escape }}
                {% if btn.icon is not empty %}<i class="material-icons">{{ btn.icon }}</i>{% endif %}
              </a>
            {% endif %}
          {% endfor %}

          {% if this.helpLink is defined and this.helpLink != false %}
            {% if this.enableSidebar %}
              <a class="btn btn-floating-item btn-help btn-sidebar" href="#"
                 title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                 data-toggle="sidebar"
                 data-target="#right-sidebar"
                 data-url="{{ this.helpLink|escape }}"
              >
                {{ 'Help'|trans({}, 'Admin.Global') }}
              </a>
            {% else %}
              <a class="btn btn-floating-item btn-help" href="{{ this.helpLink|escape }}"
                 title="{{ 'Help'|trans({}, 'Admin.Global') }}">
                {{ 'Help'|trans({}, 'Admin.Global') }}
              </a>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  {{ renderhook('displayDashboardTop') }}
</div>

