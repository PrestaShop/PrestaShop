{% block entity_search_input_widget %}
  {# We cannot use the escape filter for remote_url or it breaks the url and it is not callable any more #}
  {%- set attr = attr|merge({
    'data-prototype-template': form_row(prototype),
    'data-prototype-name': prototype.vars.name|e('html_attr'),
    'data-prototype-image': prototype_image|e('html_attr'),
    'data-prototype-value': prototype_value|e('html_attr'),
    'data-prototype-display': prototype_display|e('html_attr'),
    'data-mapping-value': mapping_value|e('html_attr'),
    'data-mapping-image': mapping_image|e('html_attr'),
    'data-mapping-display': mapping_display|e('html_attr'),
    'data-remove-modal-title': remove_modal_title|e('html_attr'),
    'data-remove-modal-message': remove_modal_message|e('html_attr'),
    'data-remove-modal-apply': remove_modal_apply|e('html_attr'),
    'data-remove-modal-cancel': remove_modal_cancel|e('html_attr'),
    'data-remote-url': remote_url,
    'data-data-limit': limit,
    'data-allow-delete': form.vars.allow_delete ? 1 : 0
  }) -%}
  {%- set attr = attr|merge({'class': (attr.class|default('') ~ ' entity-search-widget')|trim }) -%}
  {# We use widget_container_attributes in this widget because we do not want the name property #}
  <div {{ block('widget_container_attributes') }}>
    <div class="search search-with-icon">
      {%- set attr = search_attr|merge({
        'class': (search_attr.class|default('') ~ ' entity-search-input form-control')|trim,
        'autocomplete': 'off',
        'placeholder': placeholder,
        'type': 'text'
      }) -%}
      {%- set id = form.vars.id ~ '_search_input' -%}
      <input {{ block('widget_container_attributes') }} />
    </div>
    {{- block('form_help') -}}
    {%- set attr = list_attr|merge({'class': (list_attr.class|default('') ~ ' entities-list')|trim }) -%}
    {%- set id = form.vars.id ~ '_list' -%}
    <ul {{ block('widget_container_attributes') }}>
      {{- block('form_rows') -}}
    </ul>
  </div>
{% endblock %}

{% block entity_item_row %}
  {%- set view_data = form.parent.vars.view_data -%}
  {%- set item = null -%}
  {% if view_data[name] is defined %}
    {%- set item = view_data[name] -%}
  {% endif %}
  <li class="media entity-item">
    <div class="media-left">
      <img class="media-object image" src="{{ item.image|default(form.parent.vars.prototype_image) }}" />
    </div>
    <div class="media-body media-middle">
      <span class="label">
        {{ item.name|default(form.parent.vars.prototype_display) }}
      </span>
      <i class="material-icons delete entity-item-delete">clear</i>
    </div>
    <input type="hidden" {{ block('widget_attributes') }} value="{{ form.vars.value|default(form.parent.vars.prototype_value) }}" />
  </li>
{% endblock %}
