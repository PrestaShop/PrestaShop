        </div>
      {% endfor %}
      {% if not hide_locales %}
        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle js-locale-btn"
                  type="button"
                  data-toggle="dropdown"
            {% if change_form_language_url is defined %}
