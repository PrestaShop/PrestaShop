<div class="text-center showcase-list-card">
  <img class="img-responsive mt-3 img-rtl" src="{{ asset('themes/new-theme/img/empty_state/catalog.png') }}">

  <p class="mt-4 showcase-list-card__header">
    {{ "Let's start building your catalog!"|trans({}, 'Admin.Catalog.Feature') }}
  </p>

  <p class="mx-auto showcase-list-card__message">
    {{ 'Building your catalog is the key step; present your brand here and make visitors feel like shopping on your store. Our advice? Pay extra attention to your product's images, neat pictures could increase your conversion rate by 35%!'|trans({}, 'Admin.Catalog.Feature') }}
  </p>

  <div class="mt-4">
    <a href="{{ documentation_link('product') }}" target="_blank" class="btn btn-outline-secondary mr-1">
      {{ 'Learn how to manage your catalog'|trans({}, 'Admin.Catalog.Feature') }}
    </a>

    <a href="{{ path('admin_product_new') }}" class="btn btn-primary ml-1">
      {{ 'Add your first product'|trans({}, 'Admin.Catalog.Feature') }}
    </a>
  </div>
  <div class="mt-4">
    <a href="{{ path('admin_import', {'import_type': 'products'}) }}">
      {% set fileTypes = ['.csv', '.xls', '.xlsx', '.xlst', '.0ds', '.ots'] %}

      {{ 'Import a list of products (filetypes: %fileTypes%).'|trans({'%fileTypes%' : fileTypes|join(', ')}, 'Admin.Catalog.Feature') }}
    </a>
  </div>
</div>
