<div class="header-toolbar d-print-none">
  {{ render(controller('PrestaShopBundle\\Controller\\Admin\\MultistoreController::header', {lockedToAllShopContext: force_all_shop_context})) }}

  <div class="container-fluid">

    {% block page_breadcrumb %}
      <nav aria-label="Breadcrumb">
        <ol class="breadcrumb">
          {% if breadcrumbs2.container.name != ''%}
            <li class="breadcrumb-item">{{  breadcrumbs2.container.name|escape }}</li>
          {% endif %}

          {% if breadcrumbs2.tab.name != '' and breadcrumbs2.container.name != breadcrumbs2.tab.name and breadcrumbs2.tab.href != '' %}
            <li class="breadcrumb-item active">
              <a href="{{ breadcrumbs2.tab.href|escape }}" aria-current="page">{{ breadcrumbs2.tab.name|escape }}</a>
            </li>
          {% endif %}
        </ol>
      </nav>
    {% endblock %}

    {% set persistent_help_btn = help_link is defined and help_link != false and layoutHeaderToolbarBtn|default([]) is empty %}
    <div class="title-row {%if persistent_help_btn %}flex-nowrap flex-md-wrap{% endif %}">
      {% block page_title %}
        {# If layoutTitle is forced it is used by default #}
        {% if layoutTitle|default(false) is not empty %}
          {% set pageTitle = layoutTitle %}
        {% elseif title is iterable %}
          {% set pageTitle = title|last %}
        {% else %}
          {% set pageTitle = title %}
        {% endif %}

        {% if use_regular_h1_structure %}
        <h1 class="title">
          {{ pageTitle }}
        </h1>
        {% else %}
          {{ pageTitle }}
        {% endif %}
      {% endblock %}

      {% block toolbar_box %}
        <div class="toolbar-icons{% if persistent_help_btn %} toolbar-icons--persistent{% endif %}">
          <div class="wrapper">
            {{ renderhook('displayDashboardToolbarTopMenu', {}) }}
            {% if layoutHeaderToolbarBtn|default([]) is not empty %}
              {% for key, btn in layoutHeaderToolbarBtn %}
                {% if key != 'back' and key != 'modules-list' %}
                  {# TODO: REFACTOR ALL THIS THINGS #}
                  <a
                    class="btn {% if btn.class is defined and btn.class %}{{ btn.class|escape }}{% else %}btn-primary{% endif %}{% if btn.target|default(false) %} _blank{% endif %}{% if btn.disabled|default(false) %} disabled auto-pointer-events{% endif %} pointer"
                    {% if btn.href is defined %}
                    id="page-header-desc-{{ table }}-{% if btn.imgclass is defined %}{{ btn.imgclass|escape }}{% else %}{{ key }}{% endif %}"
                    href="{{ btn.href|escape }}"
                    {% endif %}
                    title="{% if btn.help is defined %}{{ btn.help }}{% else %}{{ btn.desc|escape }}{% endif %}"
                    {% if btn.js|default(false) %}
                    onclick="{{ btn.js }}"
                    {% endif %}
                    {% if btn.modal_target|default(false) %}
                    data-target="{{ btn.modal_target }}"
                    data-toggle="modal"
                    {% endif %}
                    {% if btn.help is defined %}
                    data-toggle="pstooltip"
                    data-placement="bottom"
                    {% endif %}
                    {% if btn.data_attributes|default(false) %}
                    {% for attribute_name, attribute_value in btn.data_attributes %}
                    data-{{ attribute_name }}="{{ attribute_value }}"
                    {% endfor %}
                    {% endif %}
                  >
                    {% if btn.icon is not empty %}<i class="material-icons">{{ btn.icon }}</i>{% endif %}
                    {{ btn.desc|escape }}
                  </a>
                {% endif %}
              {% endfor %}
              {% if layoutHeaderToolbarBtn['modules-list'] is defined %}
                {# TODO: REFACTOR ALL THIS THINGS #}
                <a
                  class="btn btn-outline-secondary {% if layoutHeaderToolbarBtn['modules-list'].target|default(false) %} _blank{% endif %}"
                  id="page-header-desc-{{ table }}-{% if layoutHeaderToolbarBtn['modules-list'].imgclass is defined %}{{ layoutHeaderToolbarBtn['modules-list'].imgclass }}{% else %}modules-list{% endif %}"
                  {% if layoutHeaderToolbarBtn['modules-list'].href is defined %}href="{{ layoutHeaderToolbarBtn['modules-list'].href }}"{% endif %}
                  title="{{ layoutHeaderToolbarBtn['modules-list'].desc }}"
                  {% if layoutHeaderToolbarBtn['modules-list'].js|default(false) %}onclick="{{ layoutHeaderToolbarBtn['modules-list'].js }}"{% endif %}
                >
                  {{ layoutHeaderToolbarBtn['modules-list'].desc }}
                </a>
              {% endif %}
            {% endif %}
            {% if help_link|default(false) %}
              {% if enableSidebar|default(false) %}
                <a class="toolbar-button btn-sidebar d-inline-block d-md-none" href="#"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                   data-toggle="sidebar"
                   data-target="#right-sidebar"
                   data-url="{{ help_link|escape}}"
                   id="product_form_open_help_mobile"
                >
                  <i class="material-icons">help_outline</i>
                </a>
                <a class="btn btn-outline-secondary btn-help btn-sidebar d-none d-md-inline-block" href="#"
                   title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                   data-toggle="sidebar"
                   data-target="#right-sidebar"
                   data-url="{{ help_link|escape }}"
                   id="product_form_open_help"
                >
                  {{ 'Help'|trans({}, 'Admin.Global') }}
                </a>
              {% else %}
                <a class="toolbar-button d-inline-block d-md-none" href="{{ help_link|escape }}" title="{{ 'Help'|trans({}, 'Admin.Global') }}">
                  <i class="material-icons">help_outline</i>
                </a>
                <a class="btn btn-outline-secondary btn-help d-none d-md-inline-block" href="{{ help_link|escape }}" title="{{ 'Help'|trans({}, 'Admin.Global') }}">
                  {{ 'Help'|trans({}, 'Admin.Global') }}
                </a>
              {% endif %}
            {% endif %}
          </div>
        </div>
      {% endblock %}
    </div>
  </div>

  {% if headerTabContent|default(false) %}
    <div class="page-head-tabs" id="head_tabs">
    {% for tabContent in headerTabContent %}
      {{ tabContent }}
    {% endfor %}
    </div>
  {% endif %}

  {% if current_tab_level == 3 %}
    <div class="page-head-tabs" id="head_tabs">
      <ul class="nav nav-pills">
      {% for level_1 in tabs%}
        {% for level_2 in level_1.sub_tabs %}
          {% for level_3 in level_2.sub_tabs %}
            {% if level_3.current %}
              {% for level_4 in level_3.sub_tabs %}
                {% if level_4.active %}
                  <li class="nav-item">
                    <a href="{{ level_4.href }}" id="subtab-{{ level_4.class_name }}" class="nav-link tab {% if level_4.current %}active current{% endif %}" data-submenu="{{ level_4.id_tab }}">
                      {{ level_4.name }}
                      <span class="notification-container">
                        <span class="notification-counter"></span>
                      </span>
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% if layoutHeaderToolbarBtn|default([]) is not empty %}
    <div class="btn-floating">
      <button class="btn btn-primary collapsed" data-toggle="collapse" data-target=".btn-floating-container" aria-expanded="false">
        <i class="material-icons">add</i>
      </button>
      <div class="btn-floating-container collapse">
        <div class="btn-floating-menu">
          {{ renderhook('displayDashboardToolbarTopMenu', {}) }}
          {% for key, btn  in layoutHeaderToolbarBtn %}
            {% if key != 'back' and key != 'modules-list' %}
              <a
                class="btn btn-floating-item {% if btn.floating_class|default(false) %}{{ btn.floating_class|escape }}{% endif %} {% if btn.target|default(false) %} _blank{% endif %} pointer"
                {% if btn.href is defined %}
                id="page-header-desc-floating-{{ table }}-{% if btn.imgclass is defined %}{{ btn.imgclass|escape}}{% else %}{{ key }}{% endif %}"
                href="{{ btn.href|escape}}"
                {% endif %}
                title="{% if btn.help is defined %}{{ btn.help}}{% else%}{{ btn.desc|escape}}{% endif %}"
                {% if btn.js|default(false) %}
                onclick="{{ btn.js }}"{% endif %}
                {% if btn.modal_target|default(false) %}
                data-target="{{ btn.modal_target }}"
                data-toggle="modal"
                {% endif %}
                {% if btn.help is defined %}
                data-toggle="pstooltip"
                data-placement="bottom"
                {% endif %}
              >
                {{ btn.desc|escape }}
                {% if btn.icon is not empty %}<i class="material-icons">{{ btn.icon }}</i>{% endif %}
              </a>
            {% endif %}
          {% endfor %}

          {% if help_link|default(false) %}
            {% if enableSidebar %}
              <a class="btn btn-floating-item btn-help btn-sidebar" href="#"
                 title="{{ 'Help'|trans({}, 'Admin.Global') }}"
                 data-toggle="sidebar"
                 data-target="#right-sidebar"
                 data-url="{{ help_link|escape }}"
              >
                {{ 'Help'|trans({}, 'Admin.Global') }}
              </a>
            {% else %}
              <a class="btn btn-floating-item btn-help" href="{{ help_link|escape }}" title="{{ 'Help'|trans({}, 'Admin.Global') }}">
                {{ 'Help'|trans({}, 'Admin.Global') }}
              </a>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  {{ renderhook('displayDashboardTop', {}) }}
</div>
