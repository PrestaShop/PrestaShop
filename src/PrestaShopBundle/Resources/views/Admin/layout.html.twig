{% set lightDisplay = app.request.query.get('liteDisplaying', false)  %}
{% set showContentHeader = showContentHeader is defined ? showContentHeader : true  %}
{% set display_footer = display_footer is defined ? display_footer : true  %}
{% set display_header = display_header is defined ? display_header : true  %}
{% set locked_to_all_shop_context = locked_to_all_shop_context is defined ? locked_to_all_shop_context : false %}
{% set toolbar_btn = toolbar_btn is defined ? toolbar_btn : [] %}
{% set table = table is defined ? table : false %}

{# If metaTitle is explicitely set the it is used as is #}
{% if metaTitle is not defined or metaTitle is empty %}
  {# First fallback is explicitely set meta_title (legacy variable name) #}
  {% if meta_title is defined and meta_title is not empty %}
    {% set metaTitle = meta_title  %}
  {# Second fallback is when layoutTitle is explicitely set (this must be check before a fallback value is set on layoutTitle #}
  {% elseif layoutTitle is defined and layoutTitle is not empty %}
    {% set metaTitle = layoutTitle %}
  {# Last fallback is the tab name from the breadcrumbs #}
  {% elseif breadcrumbs2.tab.name is defined %}
    {% set metaTitle = breadcrumbs2.tab.name %}
  {% else %}
    {% set metaTitle = '' %}
  {% endif %}
{% endif %}

{# If layoutTitle is explicitely set the it is used as is #}
{% if layoutTitle is not defined or layoutTitle is empty %}
  {# First fallback is explicitely set meta_title (legacy variable name) #}
  {% if meta_title is defined and meta_title is not empty %}
    {% set layoutTitle = meta_title  %}
  {# Last fallback is the tab name from the breadcrumbs #}
  {% elseif breadcrumbs2.tab.name is defined %}
    {% set layoutTitle = breadcrumbs2.tab.name %}
  {% else %}
    {% set layoutTitle = '' %}
  {% endif %}
{% endif %}

{% extends(use_symfony_layout
  ? '@PrestaShop/Admin/Layout/default_layout.html.twig'
  : template_from_string(
    getLegacyLayout(
      app.request.attributes.get('_legacy_controller'),
      layoutTitle is defined ? layoutTitle : '',
