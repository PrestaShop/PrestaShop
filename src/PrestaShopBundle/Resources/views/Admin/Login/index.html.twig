<!DOCTYPE html>
<html lang="{{ languageIso }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link rel="icon" type="image/x-icon" href="{{ imgDir }}favicon.ico" />
  <link rel="apple-touch-icon" href="{{ imgDir }}app_icon.png" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="robots" content="NOFOLLOW, NOINDEX">

  <title>
  {% block title %}
    {{ shopName }} (PrestaShop&trade;)
  {% endblock %}
  </title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('themes/new-theme/public/theme.css') }}" />
  {% endblock %}
</head>
<body>
{% block content %}
  <div class="d-flex flex-column align-items-center justify-content-center flip-card">
    <div class="title-row">
      <div class="text-center">
        <img src="{{ imgDir }}prestashop@2x.png" alt="PrestaShop">
      </div>
      <div class="text-center text-secondary">
        {{ prestashopVersion }}
      </div>

      {% if app.session.flashbag.peek('error')|length() > 0 %}
        <div class="alert alert-danger mt-1" role="alert">
          <div class="alert-text">
            {% for flashMessage in app.session.flashbag.get('error') %}
              <p>{{ flashMessage|raw }}</p>
            {% endfor %}
          </div>
        </div>
      {% endif %}
      {% if app.session.flashbag.peek('success')|length() > 0 %}
        <div class="alert alert-success mt-1" role="alert">
          <div class="alert-text">
            {% for flashMessage in app.session.flashbag.get('success') %}
              <p>{{ flashMessage|raw }}</p>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <div class="shop-image-container text-center mb-3">
      <img
        class="js-preston-img"
        src="{{ imgDir }}preston-login@2x.png"
        data-hover-src="{{ imgDir }}preston-login-wink@2x.png"
        alt="{{ shopName }}"
      >
    </div>

    {% if showLoginForm or showForgotPasswordForm or showResetPasswordForm %}
      <div class="card login-card flip-card-inner">
        <div class="card-block">
          <div class="card-text pb-3 mx-auto flip-card-back">
            {% if showResetPasswordForm %}
              {% include '@PrestaShop/Admin/Login/Blocks/reset_password_form.html.twig' %}
            {% else %}
              <div class="js-login-form-container{% if not showLoginForm %} d-none{% endif %}">
                {% include '@PrestaShop/Admin/Login/Blocks/login_form.html.twig' %}
              </div>
              <div class="js-forgot-form-container{% if not showForgotPasswordForm %} d-none{% endif %}">
                {% include '@PrestaShop/Admin/Login/Blocks/forgot_password_form.html.twig' %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}

    <div class="row mt-5">
      <div class="col text-center">
        <a class="text-secondary" href="http://www.prestashop.com/" target="_blank">
          &copy; PrestaShop&#8482; 2007-{{ currentYear }} - All rights reserved
        </a>
      </div>
    </div>

    <div class="row mt-1">
      <div class="col text-center">
        <a class="social-link" href="https://twitter.com/PrestaShop" title="Twitter" target="_blank">
          <img src="{{ asset('themes/new-theme/img/social/twitter.svg') }}" alt="Twitter">
        </a>
        <a class="social-link mx-1" href="https://www.facebook.com/prestashop" title="Facebook" target="_blank">
          <img src="{{ asset('themes/new-theme/img/social/facebook.png') }}" alt="Facebook">
        </a>
        <a class="social-link" href="https://www.prestashop.com/github" title="Github" target="_blank">
          <img src="{{ asset('themes/new-theme/img/social/github.png') }}" alt="Github">
        </a>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('themes/new-theme/public/login.bundle.js') }}"></script>
{% endblock %}
</body>
</html>
