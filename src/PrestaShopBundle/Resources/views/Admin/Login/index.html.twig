<!DOCTYPE html>
<html lang="{{ languageIso }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link rel="icon" type="image/x-icon" href="{{ imgDir }}favicon.ico" />
  <link rel="apple-touch-icon" href="{{ imgDir }}app_icon.png" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="robots" content="NOFOLLOW, NOINDEX">

  <title>
  {% block title %}
    {{ shopName }} (PrestaShop&trade;)
  {% endblock %}
  </title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('themes/new-theme/public/theme.css') }}" />
  {% endblock %}
</head>
<body>
{% block content %}
  <div class="d-flex flex-column align-items-center justify-content-center">
    <div class="title-row">
      <div class="text-center">
        <img src="{{ imgDir }}prestashop@2x.png" alt="PrestaShop">
      </div>
      <div class="text-center text-secondary">
        {{ prestashopVersion }}
      </div>
    </div>

    <div class="card login-card">
      <div class="card-block">
        <div class="shop-image-container text-center mb-3">
          <img
            class="js-preston-img"
            src="{{ imgDir }}preston-login@2x.png"
            data-hover-src="{{ imgDir }}preston-login-wink@2x.png"
            alt="{{ shopName }}"
          >
        </div>
        <p class="text-center">{{ shopName }}</p>
        <div class="card-text p-4 mx-auto">
          {% include '@PrestaShop/Admin/Login/Blocks/login_form.html.twig' %}
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col text-center">
        <a class="text-secondary" href="http://www.prestashop.com/" target="_blank">
          &copy; PrestaShop&#8482; 2007-{{ currentYear }} - All rights reserved
        </a>
      </div>
    </div>

    <div class="row">
      <div class="col text-center">
        {#@todo missing icons#}
        <a href="https://twitter.com/PrestaShop" title="Twitter" target="_blank">
          tw
        </a>
        <a href="https://www.facebook.com/prestashop" title="Facebook" target="_blank">
          fb
        </a>
        <a href="https://www.prestashop.com/github" title="Github" target="_blank">
          gh
        </a>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('themes/new-theme/public/login_page.bundle.js') }}"></script>
{% endblock %}
</body>
</html>
