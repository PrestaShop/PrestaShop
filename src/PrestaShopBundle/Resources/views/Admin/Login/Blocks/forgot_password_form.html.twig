{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{{ form_start(forgotPasswordForm, { action: path('_admin_reset_password') }) }}

<p class="text-center">{{ 'Forgot your password?'|trans({}, 'Admin.Global') }}</p>
<div class="form-group">
  <div class="row">
    <div class="col-sm">
      <label for="{{ forgotPasswordForm.email.vars.id }}" class="form-control-label">
        {{ 'Email address'|trans({}, 'Admin.Global') }}
      </label>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      {{ ps.form_widget_with_error(forgotPasswordForm.email) }}
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col">
    <button class="btn btn-outline-secondary js-cancel-button">
      {{ 'Cancel'|trans({}, 'Admin.Actions') }}
    </button>
  </div>
  <div class="col text-right">
    <button class="btn btn-primary text-uppercase js-hover-preston-wink">
      {{ 'Send reset link'|trans({}, 'Admin.Login.Feature') }}
    </button>
  </div>
</div>

{% block forgot_password_form_rest %}
  {{ form_rest(forgotPasswordForm) }}
{% endblock %}

{{ form_end(forgotPasswordForm) }}
