{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{{ form_start(resetPasswordForm, { action: path('_admin_reset_password', { employeeId: employeeId, resetToken: resetToken }) }) }}

{% set inputIds = {
  new_password: 'reset_passwd',
  new_password_confirmation: 'reset_confirm'
} %}

<p class="text-center font-weight-bold">{{ 'Reset your password'|trans({}, 'Admin.Login.Feature') }}</p>
<div class="form-group">
  <div class="row">
    <div class="col-sm">
      <label for="{{ inputIds.new_password }}" class="form-control-label">
        {{ 'New password'|trans({}, 'Admin.Login.Feature') }}
      </label>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      {{ ps.form_widget_with_error(resetPasswordForm.reset_password.first, {
        id: inputIds.new_password
      }) }}
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm">
      <label for="{{ inputIds.new_password_confirmation }}" class="form-control-label">
        {{ 'Confirm new password'|trans({}, 'Admin.Login.Feature') }}
      </label>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      {{ ps.form_widget_with_error(resetPasswordForm.reset_password.second, {
        id: inputIds.new_password_confirmation
      }) }}
    </div>
  </div>
</div>

<div class="form-group-row form-actions-row">
  <button class="btn btn-primary w-100">
    {{ 'Reset password'|trans({}, 'Admin.Login.Feature') }}
  </button>
</div>

{{ form_widget(resetPasswordForm.email) }}
{{ form_widget(resetPasswordForm._token) }}

{% block reset_password_form_rest %}
  {{ form_rest(resetPasswordForm) }}
{% endblock %}

{{ form_end(resetPasswordForm) }}
