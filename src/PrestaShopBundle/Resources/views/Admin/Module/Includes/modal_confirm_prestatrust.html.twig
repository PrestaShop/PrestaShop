{% set alertlevel = module.attributes.prestatrust.status ? 'success':'warning' %}

<div id="modal-prestatrust-{{ module.attributes.name }}" class="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ "Module verification"|trans({}, 'Admin.Modules.Feature') }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-2 text-sm-center">
              <img src="{{ module.attributes.img }}" alt="{{ module.attributes.displayName }}"/>
            </div>
            <div class="col-md-10">
              <dl class="row">
                <dt class="col-sm-3">{{ "Module"|trans({}, 'Admin.Modules.Feature') }}</dt>
                <dd class="col-sm-9">
                    <strong>{% if module.attributes.displayName %}
                        {{ module.attributes.displayName|raw }}
                      {% else %}
                        {{ module.attributes.name }}
                      {% endif %}
                  </strong>
                </dd>
                <dt class="col-sm-3">{{ "Author"|trans({}, 'Admin.Modules.Feature') }}</dt>
                <dd class="col-sm-9">{{ module.attributes.author }}</dd>
                <dt class="col-sm-3">{{ "Status"|trans({}, 'Admin.Modules.Feature') }}</dt>
                <dd class="col-sm-9"><strong><span class="text-{{ alertlevel }}">{{ module.attributes.prestatrust.status ? 'OK': 'KO' }}</span></strong></dd>
              </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-{{ alertlevel }}" role="alert">
                    <p>{{ module.attributes.prestatrust.message }}</p>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        {% if module.attributes.prestatrust.check_list.property %}
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Back to modules list</button>
            <button type="button" class="btn btn-primary">Proceed with the installation</button>
        {% else %}
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Proceed with the installation</button>
            <button type="button" class="btn btn-primary">Buy module</button>
        {% endif %}
      </div>
    </div>
  </div>
</div>