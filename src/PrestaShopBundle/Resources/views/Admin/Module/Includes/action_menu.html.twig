<div class="pull-right btn-group">

    {% if module.attributes.get('url_active') == 'buy' %}
        <a class="btn btn-primary btn-sm light-button module_action_menu_go_to_addons" href="{{module.attributes.get('url') }}" target="_blank">
            {% if module.attributes.has('price') and module.attributes.get('price').EUR > 0 %}{{module.attributes.get('price').EUR}}{% else %}Discover{% endif %}
        </a>
    {% else %}
        <a class="btn btn-primary btn-sm light-button module_action_menu_{{ module.attributes.get('url_active') }}"
           href="{{module.attributes.get('urls')[module.attributes.get('url_active')]}}"
           data-confirm_modal="module-modal-confirm-{{module.attributes.get('name')}}-{{ module.attributes.get('url_active') }}">{{module.attributes.get('url_active')|capitalize}}</a>
    {% endif %}

    {% if module.attributes.has('urls') and module.attributes.get('urls')|length > 1 %}
        <button type="button" class="btn btn-primary  btn-sm dropdown-toggle light-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <div class="dropdown-menu">
        {% for module_action, module_url in module.attributes.get('urls') %}
            {% if module_action != module.attributes.get('url_active') %}
                <li><a class="dropdown-item module_action_menu_{{ module_action }}"
                       href="{{module_url}}"
                       data-confirm_modal="module-modal-confirm-{{module.attributes.get('name')}}-{{ module_action }}">{{module_action|capitalize}}</a></li>
            {% endif %}
        {% endfor %}
        </div>
    {% endif %}
</div>
