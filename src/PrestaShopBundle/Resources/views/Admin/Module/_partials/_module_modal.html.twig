<div id="module-modal-{{module.name}}" class="modal  modal-vcenter fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header module-modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <img class="module-logo-thumb" height="15" width="15" src="{{ module.media.img }}" alt="{{ module.displayName }}" />
        <h4 class="modal-title module-modal-title">{{ module.displayName }}</h4>
        <div class="x-small-text">
            v{{ module.version }} by {{ module.author }}
        </div>
      </div>
      <div class="modal-body">
        <p>{{ module.description }}</p>
      </div>
      <div class="modal-footer module-modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
