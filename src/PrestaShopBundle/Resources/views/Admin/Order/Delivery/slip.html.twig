{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}
{% trans_default_domain "Admin.OrderDeliverySlip.Feature" %}

{% set optionsForm = form.options %}

{% block content %}
  <div class="container">
    {{ form_start(form, {'attr' : {'class': 'form'} }) }}
      <div class="row">
        {% block administration_form_delivery %}
          <div class="col">
            <div class="card" id="delivery_fieldset_general">
              <h3 class="card-header">
                <i class="material-icons">settings</i> {{ 'Delivery slip options'|trans }}
              </h3>
              <div class="card-block">
                <div class="card-text">
                  <div class="form-group">
                    {{ ps.label_with_help(('Delivery prefix'|trans), ('Prefix used for delivery slips.'|trans({}, 'Admin.OrderDeliverySlip.Help'))) }}

                    {{ form_errors(optionsForm.prefix) }}
                    {{ form_widget(optionsForm.prefix) }}
                  </div>
                  <div class="form-group">
                    {{ ps.label_with_help(('Delivery Number'|trans), ('The next delivery slip will begin with this number and then increase with each additional slip.'|trans({}, 'Admin.OrderDeliverySlip.Help'))) }}

                    {{ form_errors(optionsForm.number) }}
                    {{ form_widget(optionsForm.number) }}
                  </div>
                  <div class="form-group">
                    {{ ps.label_with_help(('Enable product image'|trans), ('Adds an image before product name on Delivery-slip'|trans({}, 'Admin.OrderDeliverySlip.Help'))) }}

                    {{ form_errors(optionsForm.enable_product_image) }}
                    {{ form_widget(optionsForm.enable_product_image) }}
                  </div>
                  {{ form_rest(form) }}
                </div>
              </div>
              <div class="card-footer">
                <div class="d-flex justify-content-end">
                  <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
                </div>
              </div>
            </div>
          </div>
        {% endblock %}
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('themes/new-theme/public/order_delivery.bundle.js') }}"></script>
{% endblock %}
