{% set importForm = form.import %}

{{ form_start(form) }}
<div class="card">
    <h3 class="card-header">
        <i class="material-icons">import_export</i> {{ 'Import'|trans }}
    </h3>
    <div class="card-block">
        <div class="card-text">
            <div class="form-group">
                <label class="form-control-label">{{ 'What do you want to import?'|trans }}</label>
                {{ form_errors(importForm.entity) }}
                {{ form_widget(importForm.entity) }}
            </div>

            <div class="form-group">
                <label class="form-control-label">{{ 'Select a file to import'|trans }}</label>
                {{ form_errors(importForm.file) }}
                {{ form_widget(importForm.file) }}
            </div>

            <div class="form-group">
                {{ ps.label_with_help(('Language of the file'|trans), ('The locale must be installed'|trans({}, 'Admin.Advparameters.Help'))) }}
                {{ form_errors(importForm.iso_lang) }}
                {{ form_widget(importForm.iso_lang) }}
            </div>

            <div class="form-group">
                <label class="form-control-label">{{ 'Separator'|trans }}</label>
                {{ form_errors(importForm.separator) }}
                {{ form_widget(importForm.separator) }}
                <small class="form-text">{{ 'e.g. 1; Blouse; 129.90; 5'|trans({}, 'Admin.Shopparameters.Help') }}</small>
            </div>

            <div class="form-group">
                <label class="form-control-label">{{ 'Multiple value separator'|trans }}</label>
                {{ form_errors(importForm.multiple_value_separator) }}
                {{ form_widget(importForm.multiple_value_separator) }}
                <small class="form-text">{{ 'e.g. Blouse; red.jpg, blue.jpg, green.jpg; 129.90'|trans({}, 'Admin.Shopparameters.Help') }}</small>
            </div>

            <div class="form-group">
                <label class="form-control-label">
                    {{ 'Delete all'|trans }}
                    <span id="entity"></span>
                    {{ 'before import'|trans }}
                </label>
                {{ form_errors(importForm.truncate) }}
                {{ form_widget(importForm.truncate) }}
            </div>

            <div class="form-group">
                {{ ps.label_with_help(('Use product preference as key'|trans), ('If enabled, the product\'s reference number MUST be unique!'|trans({}, 'Admin.Advparameters.Help'))) }}
                {{ form_errors(importForm.match_ref) }}
                {{ form_widget(importForm.match_ref) }}
            </div>

            <div class="form-group">
                <label class="form-control-label">{{ 'Skip thumbnails regeneration'|trans }}</label>
                {{ form_errors(importForm.regenerate) }}
                {{ form_widget(importForm.regenerate) }}
            </div>

            <div class="form-group">
                {{ ps.label_with_help(('Force all ID numbers'|trans), (''|trans({}, 'Admin.Advparameters.Help'))) }}
                {{ form_errors(importForm.forceIDs) }}
                {{ form_widget(importForm.forceIDs) }}
            </div>

            <div class="form-group">
                {{ ps.label_with_help(('Send notification email'|trans), (''|trans({}, 'Admin.Advparameters.Help'))) }}
                {{ form_errors(importForm.sendemail) }}
                {{ form_widget(importForm.sendemail) }}
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary">
                {{ 'Next step'|trans({}, 'Admin.Actions') }}
                <i class="material-icons">navigate_next</i>
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}
