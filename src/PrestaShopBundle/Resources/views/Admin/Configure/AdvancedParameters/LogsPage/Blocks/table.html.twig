{% trans_default_domain "Admin.Advparameters.Feature" %}
{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

<table class="table table-responsive table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">
        {{ 'ID'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('id_log') }}
      </th>
      <th scope="col">
        {{ 'Employee'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('id_employee') }}
      </th>
      <th scope="col" class="text-center">
        {{ 'Severity (1-4)'|trans }}
        {{ ps.sort_arrows('severity') }}
      </th>
      <th scope="col">
        {{ 'Message'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('message') }}
      </th>
      <th scope="col" class="text-center">
        {{ 'Object type'|trans }}
        {{ ps.sort_arrows('object_type') }}
      </th>
      <th scope="col" class="text-center">
        {{ 'Object ID'|trans }}
        {{ ps.sort_arrows('object_id') }}
      </th>
      <th scope="col" class="text-center">
        {{ 'Error code'|trans }}
        {{ ps.sort_arrows('error_code') }}
      </th>
      <th scope="col">
        {{ 'Date'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('date') }}
      </th>
      <th scope="col">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  {% for log in logs %}
    <tr>
      <th scope="row">{{ log.id_log }}</th>
      <td>
        {{ include('@AdvancedParameters/LogsPage/Blocks/employee_block.html.twig', {
            'log': log
          })
        }}
      </td>
      <td class="text-center">{{ log.severity }}</td>
      <td>{{ log.message }}</td>
      <td class="text-center">{{ log.object_type }}</td>
      <td class="text-center">{{ log.object_id }}</td>
      <td class="text-center">{{ log.error_code }}</td>
      <td>{{ log.date_add }}</td>
      <td>&nbsp;</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% if logsSum >= 20 %}
  <div class="row">
    <div class="col-md-12">
      {{ render(controller('PrestaShopBundle:Admin\\Common:pagination',
      {'limit': 10, 'offset': 0, 'total': logsSum, 'caller_route': app.request.attributes.get('_route') }))
      }}
    </div>
  </div>
{% endif %}
