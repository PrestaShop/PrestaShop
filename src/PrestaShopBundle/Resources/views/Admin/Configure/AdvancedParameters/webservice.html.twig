{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain "Admin.Advparameters.Feature" %}

{% block content %}
    <div class="container">
        {{ form_start(form, {'attr' : {'class': 'form'} }) }}
        <div class="row">
            {% block webservice_configuration %}
                <div class="col">
                    <div class="card">
                        <h3 class="card-header">
                            <i class="material-icons">settings</i> {{ 'Configuration'|trans }}
                        </h3>
                        <div class="card-block">
                            <div class="card-text">
                                <div class="form-group">
                                    <label class="form-control-label">{{ 'Enable PrestaShop\'s webservice'|trans }}</label>
                                    {{ form_errors(form.webservice_configuration.enable_webservice) }}
                                    {{ form_widget(form.webservice_configuration.enable_webservice) }}
                                </div>

                                <small class="form-text">{{ 'Before activating the webservice, you must be sure to:\n 1. Check that URL rewriting is available on this server.\n 2.Check that the five methods GET, POST, PUT, DELETE and HEAD are supported by this server.'|trans({}, 'Admin.Shopparameters.Help')|nl2br }}</small>

                                <div class="form-group">
                                    <label class="form-control-label">{{ 'Enable CGI mode for PHP'|trans }}</label>
                                    {{ form_errors(form.webservice_configuration.enable_cgi) }}
                                    {{ form_widget(form.webservice_configuration.enable_cgi) }}
                                </div>

                                <small class="form-text">{{ 'Before choosing "Yes", check that PHP is not configured as an Apache module on your server.'|trans({}, 'Admin.Shopparameters.Help') }}</small>

                                {{ form_rest(form) }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
