{% set layoutTitle = '%application_name%'|trans({'%application_name%': viewableApplication.name}, 'Admin.Actions') %}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="card view-authorized-application-card" data-role="authorized-application-card">
    <h3 class="card-header">
      {{ 'Application information'|trans({}, 'Admin.Global') }}
    </h3>
    <div class="card-body">
      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'App name'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          {{ viewableApplication.name }}
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Description'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          {{ viewableApplication.description }}
        </div>
      </div>
    </div>
  </div>
  {{ include('@PrestaShop/Admin/Common/Grid/grid_panel.html.twig', {'grid': grid }) }}
{% endblock %}
