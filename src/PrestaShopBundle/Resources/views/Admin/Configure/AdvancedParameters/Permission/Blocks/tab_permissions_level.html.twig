{% for tab in tabs %}
  {% if profileTabPermissions[tab.id] is defined %}
    {% set childTabPermissions = profileTabPermissions[tab.id] %}
    {% set employeeTabPermissions = employeeProfileTabPermissions[tab.id] %}
    {% set isChild, resultPermissions, hasAllPermissions = true, 0, true %}
    <tr class="{% if tab.id_parent == 0 %}parent{% else %}js-child-{{ tab.id_parent }}{% endif %}{% if level_depth == 1 %} bg-light{% endif %}" >
      <td>
        {% if level_depth == 3 %}
          &nbsp;&nbsp;
        {% elseif level_depth == 4 %}
          &nbsp;&nbsp;&nbsp;&nbsp;
        {% endif %}

        &raquo;

        {% if level_depth == 1 %}
          <strong>{{ tab.name }}</strong>
        {% else %}
          {{ tab.name }}
        {% endif %}
      </td>
      {% for permission in configurablePermissions.permissions %}
        {% set permissionId = configurablePermissions.permissionIds[permission] %}
        <td>
          {% if configurablePermissions.hasEmployeeEditPermission and employeeTabPermissions[permission] %}
            <div class="md-checkbox md-checkbox-inline">
              <label>
                <input type="checkbox"
                       class="js-tab-permissions-checkbox js-tab-id-{{ tab.id }} js-permission-{{ permission }} js-parent-tab-id-{{ tab.id_parent }}"
                       data-id="{{ permissionId }}"
                       data-parent="{{ tab.id_parent }}"
                       data-type="{{ permission }}"
                       data-rel="{{ tab.id }}||{{ profile.id }}||{{ permission }}||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
                       {% if childTabPermissions[permission] %}checked{% endif %}
                >
                <i class="md-checkbox-control"></i>
              </label>
            </div>
          {% else %}
            {% set hasAllPermission = false %}
            <div class="md-checkbox md-checkbox-inline">
              <label>
                <input type="checkbox"
                       class="js-tab-permissions-checkbox"
                       disabled
                       {% if childTabPermissions[permission] %}checked{% endif %}
                >
                <i class="md-checkbox-control"></i>
              </label>
            </div>
          {% endif %}
        </td>
        {% set resultPermissions = resultPermissions + childTabPermissions[permission] %}
      {% endfor %}

      <td>
        <div class="md-checkbox md-checkbox-inline">
          <label>
            <input type="checkbox"
                   class="js-tab-permissions-checkbox"
                   {% if configurablePermissions.hasEmployeeEditPermission and hasAllPermissions %}
                     data-id="4"
                     data-parent="{{ tab.id_parent }}"
                     data-type="all"
                     data-rel="{{ childTabPermissions['id_tab'] }}||{{ profile.id }}||all||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
                   {% else %}
                     disabled
                   {% endif %}
                   {% if resultPermissions == 4 %}checked{% endif %}
            >
            <i class="md-checkbox-control"></i>
          </label>
        </div>
      </td>
    </tr>
  {% endif %}


  {% if level_depth < max_level_depth and tab.children is not empty %}
    {% include '@PrestaShop/Admin/Configure/AdvancedParameters/Permission/Blocks/tab_permissions_level.html.twig' with {
      'tabs': tab.children,
      'level_depth': level_depth + 1,
      'max_level_depth': max_level_depth
    } %}
  {% endif %}
{% endfor %}


