{% set enableBulkView, enableBulkAdd, enableBulkEdit, enableBulkDelete, enableBulkAll = true, true, true, true, true %}

<div class="card">
  <h3 class="card-header">
    {{ 'Menu'|trans({}, 'Admin.Advparameters.Feature') }}
  </h3>
  <div class="card-body">
    <table class="table">
      <thead>
      {% include '@PrestaShop/Admin/Configure/AdvancedParameters/Permission/Blocks/permissions_bulk_configuration.html.twig' %}
      </thead>
      <tbody>
        {% if configurablePermissions.tabs is empty %}
          <tr>
            <td colspan="6">{{ 'No menu'|trans({}, 'Admin.Advparameters.Feature') }}</td>
          </tr>
        {% else %}
          {% include '@PrestaShop/Admin/Configure/AdvancedParameters/Permission/Blocks/level_1_tab_permissions.html.twig' %}
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
