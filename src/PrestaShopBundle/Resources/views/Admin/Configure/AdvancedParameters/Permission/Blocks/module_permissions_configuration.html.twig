<div class="card">
  <h3 class="card-header">
    {{ 'Modules'|trans({}, 'Admin.Global') }}
  </h3>
  <div class="card-body">
    <table class="table">
      <thead>
      </thead>
      <tbody>
        {% if profilePermissionsForModules[profile.id] is empty %}
          <tr>
            <td colspan="3">{{ 'No module has been installed.'|trans({}, 'Admin.Notifications.Warning') }}</td>
          </tr>
        {% else %}
          {% for key, module in profilePermissionsForModules[profile.id] %}
            {% set canEmployeeViewModule = profilePermissionsForModules[employeeProfileId][key].view %}
            {% set canEmployeeConfigureModule = profilePermissionsForModules[employeeProfileId][key].configure %}
            {% set canEmployeeUninstallModule = profilePermissionsForModules[employeeProfileId][key].uninstall %}

            <tr>
              <td>&raquo; {{ module.name }}</td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    <input type="checkbox"
                           value="1"
                           {% if module.view %}checked{% endif %}
                           {% if hasEmployeeEditPermission and canEmployeeViewModule %}
                             class=""
                             data-rel="{{ module.id_module }}||view||{{ profile.id }}"
                           {% else %}
                             class=""
                             disabled
                           {% endif %}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    <input type="checkbox"
                           value="1"
                           {% if module.view %}checked{% endif %}
                           {% if hasEmployeeEditPermission and canEmployeeConfigureModule %}
                             class=""
                             data-rel="{{ module.id_module }}||configure||{{ profile.id }}"
                           {% else %}
                             class=""
                             disabled
                           {% endif %}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    <input type="checkbox"
                           value="1"
                           {% if module.view %}checked{% endif %}
                           {% if hasEmployeeEditPermission and canEmployeeViewModule %}
                             class=""
                             data-rel="{{ module.id_module }}||view||{{ profile.id }}"
                           {% else %}
                             class=""
                             disabled
                           {% endif %}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
            </tr>
          {% endfor %}
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
