<div class="card">
  <h3 class="card-header">
    {{ 'Modules'|trans({}, 'Admin.Global') }}
  </h3>
  <div class="card-body">
    <table class="table"
           id="modulePermissionsTable"
           data-url="{{ path('admin_permissions_update_module_permissions') }}"
           data-success-message="{{ 'Update successful'|trans({}, 'Admin.Notifications.Success') }}"
           data-error-message="{{ 'Unable to update settings.'|trans({}, 'Admin.Notifications.Error') }}"
    >
      <tbody>
        {% if profilePermissionsForModules[profile.id] is empty %}
          <tr>
            <td colspan="3">{{ 'No module has been installed.'|trans({}, 'Admin.Notifications.Warning') }}</td>
          </tr>
        {% else %}
          {% set enableBulkView, enableBulkConfigure, enableBulkUninstall = true, true, true %}

          {% for key, module in profilePermissionsForModules[profile.id] %}
            {% set canEmployeeViewModule = profilePermissionsForModules[employeeProfileId][key].view %}
            {% set canEmployeeConfigureModule = profilePermissionsForModules[employeeProfileId][key].configure %}
            {% set canEmployeeUninstallModule = profilePermissionsForModules[employeeProfileId][key].uninstall %}

            <tr>
              <td>&raquo; {{ module.name }}</td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    {% if hasEmployeeEditPermission and canEmployeeViewModule %}
                      {% set checkboxAttributes = ' data-rel=' ~ module.id_module ~ '||view||' ~ profile.id %}
                    {% else %}
                      {% set enableBulkView = false %}
                      {% set checkboxAttributes = ' disabled' %}
                    {% endif %}

                    <input type="checkbox"
                           value="1"
                           class="js-module-permission-checkbox"
                           {% if module.view %}checked{% endif %}
                           {{ checkboxAttributes }}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    {% if hasEmployeeEditPermission and canEmployeeConfigureModule %}
                      {% set checkboxAttributes = ' data-rel=' ~  module.id_module  ~ '||configure||' ~ profile.id %}
                    {% else %}
                      {% set enableBulkConfigure = false %}
                      {% set checkboxAttributes = ' disabled' %}
                    {% endif %}

                    <input type="checkbox"
                           value="1"
                           class="js-module-permission-checkbox"
                           {% if module.view %}checked{% endif %}
                           {{ checkboxAttributes }}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
              <td>
                <div class="md-checkbox md-checkbox-inline">
                  <label>
                    {% if hasEmployeeEditPermission and canEmployeeUninstallModule %}
                      {% set checkboxAttributes = ' data-rel=' ~ module.id_module ~ '||uninstall||' ~ profile.id %}
                    {% else %}
                      {% set enableBulkConfigure = false %}
                      {% set enableBulkUninstall = ' disabled' %}
                    {% endif %}

                    <input type="checkbox"
                           value="1"
                           class="js-module-permission-checkbox"
                           {% if module.view %}checked{% endif %}
                           {{ checkboxAttributes }}
                    >
                    <i class="md-checkbox-control"></i>
                  </label>
                </div>
              </td>
            </tr>
          {% endfor %}
        {% endif %}
      </tbody>
      <thead>
        <tr>
          <th></th>
          <th>
            <div class="md-checkbox md-checkbox-inline">
              <label>
                <input type="checkbox"
                       value="1"
                       data-rel="-1||view||{{ profile.id }}"
                       class="js-module-permission-checkbox"
                       {% if not hasEmployeeEditPermission or not enableBulkView %}disabled{% endif %}
                >
                <i class="md-checkbox-control"></i>
              </label>
            </div>
            {{ 'View'|trans({}, 'Admin.Actions') }}
          </th>
          <th>
            <div class="md-checkbox md-checkbox-inline">
              <label>
                <input type="checkbox"
                       value="1"
                       data-rel="-1||configure||{{ profile.id }}"
                       class="js-module-permission-checkbox"
                       {% if not hasEmployeeEditPermission or not enableBulkConfigure %}disabled{% endif %}
                >
                <i class="md-checkbox-control"></i>
              </label>
            </div>
            {{ 'Configure'|trans({}, 'Admin.Actions') }}
          </th>
          <th>
            <div class="md-checkbox md-checkbox-inline">
              <label>
                <input type="checkbox"
                       value="1"
                       data-rel="-1||uninstall||{{ profile.id }}"
                       class="js-module-permission-checkbox"
                       {% if not hasEmployeeEditPermission or not enableBulkUninstall %}disabled{% endif %}
                >
                <i class="md-checkbox-control"></i>
              </label>
            </div>
            {{ 'Uninstall'|trans({}, 'Admin.Actions') }}
          </th>
        </tr>
      </thead>
    </table>
  </div>
</div>
