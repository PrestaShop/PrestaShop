{% for tab in configurablePermissions.tabs %}
  {% set profileTabPermissions = configurablePermissions.profilePermissionsForTabs[profile.id] %}
  {% set employeeProfileTabPermissions = configurablePermissions.profilePermissionsForTabs[employeeProfileId] %}
  {% set currentTabPermissions = profileTabPermissions[tab.id] %}
  {% set totalPermissions, hasAllPermissions = 0, true %}

  <tr>
    <td>&raquo;<strong>{{ tab.name }}</strong></td>
    {% for permission in permissions %}
      {% set permissionId = permissionIds[permission] %}
      <td>
        {% if hasEmployeeEditPermission and employeeProfileTabPermissions[tab.id][permission] %}
          <div class="md-checkbox md-checkbox-inline">
            <label>
              <input type="checkbox"
                     data-id="{{ permissionId }}"
                     data-parent="0"
                     data-type="{{ permission }}"
                     data-rel="{{ currentTabPermissions['id_tab'] }}||{{ profile.id }}||{{ permission }}||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
                     {% if currentTabPermissions[permission] %}checked{% endif %}
              />
              <i class="md-checkbox-control"></i>
            </label>
          </div>
        {% else %}
          {% set hasAllPermissions = false %}
          <div class="md-checkbox md-checkbox-inline">
            <label>
              <input type="checkbox"
                     disabled
                     {% if currentTabPermissions[permission] %}checked{% endif %}
              />
              <i class="md-checkbox-control"></i>
            </label>
          </div>
        {% endif %}
      </td>
      {% set totalPermissions = totalPermissions + profileTabPermissions[tab.id][permission] %}
    {% endfor %}
    <td>
      <div class="md-checkbox md-checkbox-inline">
        <label>
          <input type="checkbox"
                 {% if hasEmployeeEditPermission and hasAllPermissions %}
                   data-id="4"
                   data-parent="0"
                   data-type="all"
                   data-rel="{{ currentTabPermissions['id_tab'] }}||{{ profile.id }}||all||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
                 {% else %}
                   disabled
                 {% endif %}
                 {% if totalPermissions == 4 %}checked{% endif %}
          />
          <i class="md-checkbox-control"></i>
        </label>
      </div>
    </td>
  </tr>

  {% include '@PrestaShop/Admin/Configure/AdvancedParameters/Permission/Blocks/level_2_tab_permissions.html.twig' with {'parentTab': tab} %}
{% endfor %}
