<tr>
  <th></th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               {% if configurablePermissions.isBulkViewConfigurationEnabled(profile.id) %}

               {% else %}
                 disabled
               {% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'View'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
