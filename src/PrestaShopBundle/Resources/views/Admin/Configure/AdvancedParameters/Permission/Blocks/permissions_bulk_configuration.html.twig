<tr>
  <th></th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               class="js-tab-permissions-checkbox"
               data-id="0"
               data-parent="0"
               data-type="view"
               data-rel="-1||{{ profile.id }}||view||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
               {% if not configurablePermissions.isBulkViewConfigurationEnabled(profile.id) %}disabled{% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'View'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               class="js-tab-permissions-checkbox"
               data-id="0"
               data-parent="0"
               data-type="add"
               data-rel="-1||{{ profile.id }}||add||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
               {% if not configurablePermissions.isBulkAddConfigurationEnabled(profile.id) %}disabled{% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'Add'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               class="js-tab-permissions-checkbox"
               data-id="0"
               data-parent="0"
               data-type="edit"
               data-rel="-1||{{ profile.id }}||edit||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
               {% if not configurablePermissions.isBulkEditConfigurationEnabled(profile.id) %}disabled{% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'Edit'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               class="js-tab-permissions-checkbox"
               data-id="0"
               data-parent="0"
               data-type="delete"
               data-rel="-1||{{ profile.id }}||delete||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
               {% if not configurablePermissions.isBulkDeleteConfigurationEnabled(profile.id) %}disabled{% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'Delete'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               class="js-tab-permissions-checkbox"
               data-id="0"
               data-parent="0"
               data-type="all"
               data-rel="-1||{{ profile.id }}||all||{{ maxTabCount }}||{{ configurablePermissions.tabs|length }}"
               {% if not configurablePermissions.isBulkAllConfigurationEnabled(profile.id) %}disabled{% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'All'|trans({}, 'Admin.Actions') }}
  </th>
</tr>
