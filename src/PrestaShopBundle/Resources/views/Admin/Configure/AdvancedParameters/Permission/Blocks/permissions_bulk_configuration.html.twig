               {% endif %}
        />
        <i class="md-checkbox-control"></i>
      </label>
    </div>
    {{ 'Delete'|trans({}, 'Admin.Actions') }}
  </th>
  <th>
    <div class="md-checkbox md-checkbox-inline">
      <label>
        <input type="checkbox"
               {% if configurablePermissions.isBulkAllConfigurationEnabled(profile.id) %}

