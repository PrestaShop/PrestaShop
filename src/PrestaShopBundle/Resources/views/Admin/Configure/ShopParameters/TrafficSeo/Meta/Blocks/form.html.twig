{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block form %}
    {{ form_start(metaForm) }}
      <div class="card">
        <div class="card-header">
          {{ 'Meta tags'|trans({}, 'Admin.Shopparameters.Feature') }}
        </div>
        <div class="card-block row">
          <div class="card-text">
            <div class="form-group row">
              <label for="{{ metaForm.page_name.vars.id }}" class="form-control-label">
                {{ ps.label_with_help('Page name'|trans({}, 'Admin.Shopparameters.Feature'), ('Name of the related page.'|trans({}, 'Admin.Shopparameters.Help'))) }}
              </label>
              <div class="col-sm">
                {{ ps.form_widget_with_error(metaForm.page_name) }}
              </div>
            </div>
            <div class="form-group row">
              <label for="{{ metaForm.page_title.vars.id }}" class="form-control-label">
                {% set pageTilteLabel %}
                  {{ 'Title of this page.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ '  &lt;&gt;;=#{}'}}
                {% endset %}

                {{ ps.label_with_help('Page title'|trans({}, 'Admin.Shopparameters.Feature'), (pageTilteLabel))}}
              </label>
              <div class="col-sm">
                {{ ps.form_widget_with_error(metaForm.page_title) }}
              </div>
            </div>
            <div class="form-group row">
              <label for="{{ metaForm.meta_description.vars.id }}" class="form-control-label">
                {% set metaDescriptionLabel %}
                  {{ 'A short description of your shop.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ ' &lt;&gt;;=#{}' }}
                {% endset %}
                {{ ps.label_with_help('Meta description'|trans({}, 'Admin.Global'), (metaDescriptionLabel))}}
              </label>
              <div class="col-sm">
                {{ ps.form_widget_with_error(metaForm.meta_description) }}
              </div>
            </div>
            <div class="form-group row">
              <label for="{{ metaForm.meta_keywords.vars.id }}" class="form-control-label">
                {% set metaKeywordsLabel %}
                  {{ 'List of keywords for search engines.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'To add tags, click in the field, write something, and then press the "Enter" key.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ ' &lt;&gt;;=#{}' }}
                {% endset %}
                {{ ps.label_with_help('Meta keywords'|trans({}, 'Admin.Global'), (metaKeywordsLabel))}}
              </label>
              <div class="col-sm">
                {{ ps.form_widget_with_error(metaForm.meta_keywords) }}
              </div>
            </div>
            <div class="form-group row">
              <label for="{{ metaForm.url_rewrite.vars.id }}" class="form-control-label">
                {% set rewriteUrlLabel %}
                  {{ 'For instance, "contacts" for http://example.com/shop/contacts to redirect to http://example.com/shop/contact-form.php'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Only letters and hyphens are allowed.'|trans({}, 'Admin.Shopparameters.Help') }}
                {% endset %}
                {{ ps.label_with_help('Rewritten URL'|trans({}, 'Admin.Shopparameters.Feature'), (rewriteUrlLabel))}}
              </label>
              <div class="col-sm">
                {{ ps.form_widget_with_error(metaForm.url_rewrite) }}
              </div>
            </div>
            {{ form_rest(metaForm) }}
          </div>
        </div>
        <div class="card-footer">
          <div class="d-inline-flex">
            <a href="{{ path('admin_meta_index') }}" class="btn btn-outline-secondary">
              <i class="material-icons">cancel</i>
              {{ 'Cancel'|trans({}, 'Admin.Actions') }}
            </a>
          </div>
          <div class="d-inline-flex float-right">
            <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
          </div>
        </div>
      </div>
    {{ form_end(metaForm) }}
{% endblock %}
