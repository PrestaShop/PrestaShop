{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% trans_default_domain "Admin.Shopparameters.Feature" %}

{% block content %}
  {% set metaForm = form.meta %}
  <div class="row justify-content-center">
    <div class="col">
      {{ form_start(metaForm) }}
      <div class="card">
        <div class="card-header">
          {{ 'Meta tags'|trans }}
        </div>
        <div class="card-block row">
          <div class="card-text">
            <div class="form-group row">
              <label class="form-control-label">
                {{ 'Page name'|trans }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.page_name) }}
                {{ form_widget(metaForm.page_name) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {{ 'Page title'|trans }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.page_title) }}
                {{ form_widget(metaForm.page_title) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {{ 'Meta description'|trans }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.meta_description) }}
                {{ form_widget(metaForm.meta_description) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {{ 'Meta keywords'|trans }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.meta_keywords) }}
                {{ form_widget(metaForm.meta_keywords, {'attr':{'class': 'js-token-field', 'placeholder': 'Add tag'|trans({}, 'Admin.Actions')}}) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {{ 'Rewritten URL'|trans }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.url_rewrite) }}
                {{ form_widget(metaForm.url_rewrite) }}
              </div>
            </div>
            {{ form_rest(metaForm) }}
          </div>
        </div>
      </div>

      {{ form_end(metaForm) }}
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('themes/new-theme/public/meta.bundle.js') }}"></script>
{% endblock %}
