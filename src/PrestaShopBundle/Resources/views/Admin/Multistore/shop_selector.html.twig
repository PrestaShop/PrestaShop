{% block multistore_shop_selector %}
  {% if isMultistoreUsed %}
    <div class="shop-selector-content shop-selector">
      <label>{{ 'Choose a shop'|trans({}, 'Admin.Global') }}</label>
      <div class="shop-selector-search-container">
        <i class="material-icons">search</i>
        <input type="text" class="form-control shop-selector-search js-shop-selector-search" placeholder="{{ 'Search shop name'|trans({}, 'Admin.Navigation.Header') }}" data-no-results="{{ "No results found for"|trans({}, 'Admin.Global') }}" data-searching="{{ "Searching for"|trans({}, 'Admin.Global') }}">
      </div>

      <ul class="shop-selector-group-list js-multishop-scrollbar">
        {% for group in groupList|filter(group => group.shops is not empty) %}
          <li class="shop-selector-group-item shop-selector-item">
            {{ "Group"|trans({}, 'Admin.Global') ~ ' ' ~ group.name }}
          </li>

          {% for shop in group.shops %}
            {% if shop.hasMainUrl() %}
              <li class="shop-selector-shop-item shop-selector-item" data-shop-id="{{ shop.id }}">
                <div class="shop-selector-item-left">
                  <span class="shop-selector-color-container">
                    <span class="shop-selector-color"{% if shop.color is not empty %} style="background-color: {{shop.color}};"{% endif %}></span>
                  </span>
                  {{ shop.name }}
                </div>
                <i class="material-icons">arrow_forward</i>
              </li>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </ul>
    </div>
  {% endif %}
{% endblock %}
