<div class="row">
    <div class="col-md-4">
        <fieldset class="form-group">
            <label>{{ form.feature.vars.label }}</label>
            {{ form_widget(form.feature) }}
        </fieldset>
    </div>
    <div class="col-md-4">
        <fieldset class="form-group">
            <label>{{ form.value.vars.label }}</label>
            {{ form_widget(form.value) }}
        </fieldset>
    </div>
    <div class="col-md-3">
        <fieldset class="form-group">
            <label>{{ form.custom_value.vars.label }}</label>
            {{ form_widget(form.custom_value) }}
        </fieldset>
    </div>
    <div class="col-md-1">
        <fieldset class="form-group">
            <label>&nbsp;</label>
            <button type="button" class="btn btn-danger btn-sm btn-block delete" style="display:inline-block"><i class="material-icons">delete</i></button>
        </fieldset>
    </div>
</div>
