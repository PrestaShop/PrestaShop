{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

<div class="card-group">
  {% embed '@PrestaShop/Admin/Improve/Design/Theme/Blocks/Partials/logo_card.html.twig' %}
    {% block card_title %}
      {{ 'Header logo'|trans({}, 'Admin.Design.Feature') }}
    {% endblock %}
    {% block card_content %}
      <p class="card-text">
        {{ 'Will appear on main page. Recommended size for the default theme: height %height% and width %width%.'|trans({'%height%': '40px', '%width%': '200px'}, 'Admin.Design.Help') }}
      </p>
      {{ ps.form_group_row(shopLogosForm.header_logo) }}
    {% endblock %}
  {% endembed %}

  {% embed '@PrestaShop/Admin/Improve/Design/Theme/Blocks/Partials/logo_card.html.twig' %}
    {% block card_title %}
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active show"
             id="mail-tab"
             data-toggle="tab"
             href="#email-configuration"
             role="tab"
             aria-controls="home"
             aria-expanded="true"
             aria-selected="true"
          >
            {{ 'Mail logo'|trans({}, 'Admin.Design.Feature') }}
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link"
             id="invoice-tab"
             data-toggle="tab"
             href="#invoice-configuration"
             role="tab"
             aria-controls="home"
             aria-expanded="true"
             aria-selected="true"
          >
            {{ 'Invoice logo'|trans({}, 'Admin.Design.Feature') }}
          </a>
        </li>
      </ul>
    {% endblock %}
    {% block card_content %}
      <div class="tab-content">
        <div class="tab-pane active show" id="email-configuration" role="tabpanel" aria-labelledby="logo-tab">
          <p class="card-text">
            {{ 'Will appear on email headers. If undefined, the header logo will be used.'|trans({}, 'Admin.Design.Help') }}
          </p>

          {{ ps.form_group_row(shopLogosForm.mail_logo) }}
          {#todo: decide about it#}
          {% if headerLogoPath == mailLogoPath %}
            <p class="form-text mt-3">{{ 'Warning: if no email logo is available, the main logo will be used instead.'|trans({}, 'Admin.Design.Notification') }}</p>
          {% endif %}
        </div>
        <div class="tab-pane" id="invoice-configuration" role="tabpanel" aria-labelledby="logo-tab">
          <p class="card-text">
            {{ 'Will appear on invoice headers.'|trans({}, 'Admin.Design.Help') }}
          </p>

          {{ ps.form_group_row(shopLogosForm.invoice_logo) }}
          {#todo: decide about it#}
          {% if headerLogoPath == invoiceLogoPath %}
            <p class="form-text  mt-3">{{ 'Warning: if no invoice logo is available, the main logo will be used instead.'|trans({}, 'Admin.Design.Help') }}</p>
          {% endif %}

        </div>
      </div>
    {% endblock %}
  {% endembed %}

  {% embed '@PrestaShop/Admin/Improve/Design/Theme/Blocks/Partials/logo_card.html.twig' %}
    {% block card_title %}
      {{ 'Favicon'|trans({}, 'Admin.Design.Feature') }}
    {% endblock %}
    {% block card_content %}
      <p class="card-text">
        {{ 'It is the small icon that appears in browser tabs, next to the title'|trans({}, 'Admin.Design.Help') }}
      </p>
      {{ ps.form_group_row(shopLogosForm.favicon) }}
    {% endblock %}
  {% endembed %}

  {#todo: remove below once finished#}
  <div class="clearfix">&nbsp;</div>

  <div class="tab-content">
    <div class="tab-pane active show" id="logo-configuration" role="tabpanel" aria-labelledby="logo-tab">
      <div class="form-group">
        <div class="form-control-label">
          {{ ps.label_with_help(('Header logo'|trans({}, 'Admin.Design.Feature')), ('Will appear on main page. Recommended size for the default theme: height %height% and width %width%.'|trans({'%height%': '40px', '%width%': '200px'}, 'Admin.Design.Help'))) }}

          <img src="{{ headerLogoPath }}" alt="{{ 'Header logo'|trans({}, 'Admin.Design.Feature') }}" title="{{ 'Header logo'|trans({}, 'Admin.Design.Feature') }}">
        </div>

        {{ form_widget(shopLogosForm.header_logo) }}
      </div>
    </div>
    <div class="tab-pane" id="invoice-and-mail-configuration" role="tabpanel" aria-labelledby="invoice-and-mail-tab">
      <div class="form-group">
        <div class="form-control-label">
          {{ ps.label_with_help(('Mail logo'|trans({}, 'Admin.Design.Feature')), ('Will appear on email headers. If undefined, the header logo will be used.'|trans({}, 'Admin.Design.Help'))) }}

          <img src="{{ mailLogoPath }}" alt="{{ 'Mail logo'|trans({}, 'Admin.Design.Feature') }}" title="{{ 'Mail logo'|trans({}, 'Admin.Design.Feature') }}">
        </div>

        {{ form_widget(shopLogosForm.mail_logo) }}
      </div>

      <div class="form-group">
        <div class="form-control-label">
          {{ ps.label_with_help(('Invoice logo'|trans({}, 'Admin.Design.Feature')), ('Will appear on invoice headers.'|trans({}, 'Admin.Design.Help')) ~ ('Warning: you can use a PNG file for transparency, but it can take up to 1 second per page for processing. Please consider using JPG instead.'|trans({}, 'Admin.Design.Help'))) }}

          <img src="{{ invoiceLogoPath }}" alt="{{ 'Invoice logo'|trans({}, 'Admin.Design.Feature') }}" title="{{ 'Invoice logo'|trans({}, 'Admin.Design.Feature') }}">
        </div>
      </div>
    </div>
    <div class="tab-pane" id="favicon-configuration" role="tabpanel" aria-labelledby="favicon-tab">
      <div class="form-group">
        <div class="form-control-label">
          {{ ps.label_with_help(('Favicon'|trans({}, 'Admin.Design.Feature')), ('It is the small icon that appears in browser tabs, next to the title'|trans({}, 'Admin.Design.Help'))) }}

          <img src="{{ faviconPath }}" alt="{{ 'Invoice logo'|trans({}, 'Admin.Design.Feature') }}" title="{{ 'Invoice logo'|trans({}, 'Admin.Design.Feature') }}">
        </div>

        {{ form_widget(shopLogosForm.favicon) }}

        <p class="form-text mt-3">{{ 'Use our [1]favicon generator on PrestaShop Marketplace[/1] to boost your brand image!'|trans({'[1]': '<a href="https://addons.prestashop.com/create-favicon.php?pab=1" target="_blank">', '[/1]': '</a>'}, 'Admin.Design.Help')|raw }}</p>
      </div>
    </div>
  </div>
</div>
