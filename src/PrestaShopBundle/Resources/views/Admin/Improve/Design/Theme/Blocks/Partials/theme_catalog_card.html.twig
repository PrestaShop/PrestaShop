{% extends '@PrestaShop/Admin/Improve/Design/Theme/Blocks/Partials/theme_card_container.html.twig' %}

{% block content %}
  <div class="card theme-card theme-catalog-card">

    <div class="text-center catalog-image">
      {% block image %}
      {% endblock %}
    </div>

    <div class="text-center catalog-description">
      {% block description %}
      {% endblock %}
    </div>

    <div class="actions-container active">
      {% block button_container %}
      {% endblock %}
    </div>
  </div>
{% endblock %}

