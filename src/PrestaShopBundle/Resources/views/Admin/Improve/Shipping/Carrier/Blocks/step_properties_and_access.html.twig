{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block carrier_form_step_properties_and_access %}
<div class="form-step js-form-step" data-step="4">
  <div class="card-block row">
    <div class="card-text">

        {{ ps.form_group_row(carrierForm.step_properties_and_access.max_width, {}, {
          'label': 'Maximum package width (cm)'|trans({}, 'Admin.Global'),
          'help': 'Maximum width managed by this carrier. Set the value to "0", or leave this field blank to ignore.'
          |trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_properties_and_access.max_height, {}, {
          'label': 'Maximum package height (cm)'|trans({}, 'Admin.Global'),
          'help': 'Maximum height managed by this carrier. Set the value to "0", or leave this field blank to ignore.'
          |trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_properties_and_access.max_depth, {}, {
          'label': 'Maximum package depth (cm)'|trans({}, 'Admin.Global'),
          'help': 'Maximum depth managed by this carrier. Set the value to "0", or leave this field blank to ignore.'
          |trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_properties_and_access.max_weight, {}, {
          'label': 'Maximum package weight (kg)'|trans({}, 'Admin.Global'),
          'help': 'Maximum weight managed by this carrier. Set the value to "0", or leave this field blank to ignore.'
          |trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_properties_and_access.group_association, {}, {
          'label': 'Group access'|trans({}, 'Admin.Global'),
          'help': 'Mark the groups that are allowed access to this carrier.'|trans({}, 'Admin.Shipping.Help')
        }) }}
      </div>

      {% block carrier_step_properties_and_access_form_rest %}
        {{ form_rest(carrierForm.step_properties_and_access) }}
      {% endblock %}
    </div>

  <div class="card-footer">
    {#@todo: admin_carriers_index#}
    <a href="{{ path('admin_carriers_create') }}" class="btn btn-outline-secondary">
      {{ 'Cancel'|trans({}, 'Admin.Actions') }}
    </a>
    <a href="#" class="btn btn-outline-secondary  js-form-step-switch" data-step="3">
      {{ 'Previous'|trans({}, 'Admin.Actions') }}
    </a>
    <a href="#" class="btn btn-primary float-right js-form-step-switch" data-step="5">
      {{ 'Next'|trans({}, 'Admin.Actions') }}
    </a>
  </div>
</div>
{% endblock %}

