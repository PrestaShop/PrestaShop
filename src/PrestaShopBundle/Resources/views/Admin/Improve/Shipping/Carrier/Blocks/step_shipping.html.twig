{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block carrier_form_step_shipping %}
  {{ ps.form_group_row(carrierForm.step_shipping.cost_handling, {}, {
    'label': 'Add handling costs'|trans({}, 'Admin.Global'),
    'help': 'Include the handling costs (as set in Shipping > Preferences) in the final carrier price.'|trans({}, 'Admin.Shipping.Help')
  }) }}

  {{ ps.form_group_row(carrierForm.step_shipping.is_free_shipping, {}, {
    'label': 'Free shipping'|trans({}, 'Admin.Global'),
  }) }}

  {{ ps.form_group_row(carrierForm.step_shipping.shipping_method, {'attr': {'class': 'js-shipping-method'}}, {
    'label': 'Billing'|trans({}, 'Admin.Global'),
  }) }}

  {{ ps.form_group_row(carrierForm.step_shipping.tax, {}, {
    'label': 'Tax'|trans({}, 'Admin.Global'),
  }) }}

  {{ ps.form_group_row(carrierForm.step_shipping.out_of_range, {}, {
    'label': 'Out of range behavior'|trans({}, 'Admin.Global'),
    'help': "Out-of-range behavior occurs when no defined range matches the customer's cart (e.g. when the weight of the cart is greater than the highest weight limit defined by the weight ranges)."
    |trans({}, 'Admin.Shipping.Help')
  }) }}

  Ranges

  <table class="table table-responsive table-responsive-sm table-sm" data-culumn-count="1">
    <tbody class="ranges"
{#      data-prototype='{{ form_widget(carrierForm.step_shipping.zone_ranges.zone_range_inputs.vars.prototype) }}'/>#}
    >
      <tr class="table-dark text-dark js-range-row">
        <td>
          <p>
            <span class="js-content-case-weight">{{ 'Will be applied when the weight is'|trans({}, 'Admin.Shipping.Feature') }}</span>
            <span class="js-content-case-price">{{ 'Will be applied when the price is'|trans({}, 'Admin.Shipping.Feature') }}</span>
            <
          </p>
        </td>
        <td>
          {{ form_widget(carrierForm.step_shipping.zone_ranges.zone_range_inputs.applied_from) }}
        </td>
      </tr>
      <tr class="table-dark text-dark js-range-row">
        <td>
          <p>
            <span class="js-content-case-weight">{{ 'Will be applied when the weight is'|trans({}, 'Admin.Shipping.Feature') }}</span>
            <span class="js-content-case-price">{{ 'Will be applied when the price is'|trans({}, 'Admin.Shipping.Feature') }}</span>
            >=
          </p>
        </td>
        <td>
          {{ form_widget(carrierForm.step_shipping.zone_ranges.zone_range_inputs.applied_to) }}
        </td>
      </tr>
      {% for zone_id, checkbox in carrierForm.step_shipping.zone_ranges.zone_checks %}
        <tr data-zone-id="{{ zone_id }}" class="js-zone-row">
          <td> {{ form_widget(checkbox) }}</td>
          <td>{{ form_widget(carrierForm.step_shipping.zone_ranges.zone_range_inputs[zone_id]) }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <button type="button" class="js-add-range btn btn-outline-primary">
    {{ 'Add new range'|trans({}, 'Admin.Global') }}
  </button>

  <script id="js-ranges-input-template" type="text/html">
      <td><input name="/__name__/" class="form-control" type="text"></td>
  </script>
{% endblock %}

