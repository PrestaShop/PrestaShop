{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block carrier_form_step_general %}
<div class="form-step js-form-step active" data-step="1">
  <div class="card-block row">
    <div class="card-text">
        {% set nameHelp =
          'Allowed characters: letters, spaces and "%special_chars%".'|trans({'%special_chars%' : '(),-'}, 'Admin.Shipping.Help')
          ~ ' ' ~
          "The carrier's name will be displayed during checkout." |trans({}, 'Admin.Shipping.Help')
          ~ ' ' ~
          'For in-store pickup, enter 0 to replace the carrier name with your shop name.'|trans({}, 'Admin.Shipping.Help')
        %}

        {{ ps.form_group_row(carrierForm.step_general.name, {}, {
          'class': 'js-carrier-name',
          'label': 'Carrier name'|trans({}, 'Admin.Global'),
          'help': nameHelp
        }) }}

        {{ ps.form_group_row(carrierForm.step_general.transit_time, {
          'attr': {'class': 'js-transit'},
        }, {
          'label': 'Transit time'|trans({}, 'Admin.Global'),
          'help': 'The delivery time will be displayed during checkout.'|trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_general.speed_grade, {}, {
          'label': 'Speed grade'|trans({}, 'Admin.Global'),
          'help': 'Enter "0" for a longest shipping delay, or "9" for the shortest shipping delay.'|trans({}, 'Admin.Shipping.Help')
        }) }}

        {{ ps.form_group_row(carrierForm.step_general.logo, {}, {
          'label': 'Logo'|trans({}, 'Admin.Global'),
        }) }}

        {{ ps.form_group_row(carrierForm.step_general.tracking_url, {}, {
          'label': 'Tracking url'|trans({}, 'Admin.Global'),
          'help': "Delivery tracking URL: Type '@' where the tracking number should appear. It will be automatically replaced by the tracking number."
          |trans({}, 'Admin.Shipping.Help')
        }) }}

      {% block carrier_step_general_form_rest %}
        {{ form_rest(carrierForm.step_general) }}
      {% endblock %}
    </div>
  </div>

  <div class="card-footer">
    {#@todo: admin_carriers_index#}
    <a href="{{ path('admin_carriers_create') }}" class="btn btn-outline-secondary">
      {{ 'Cancel'|trans({}, 'Admin.Actions') }}
    </a>

    {% set next_step = 3 %}

    {% if carrierForm.step_multi_shop is defined %}
      {% set next_step = 2 %}
    {% endif %}

    <a href="#" class="btn btn-primary float-right js-form-step-switch" data-step="{{ next_step }}">
      {{ 'Next'|trans({}, 'Admin.Actions') }}
    </a>
  </div>
</div>

{% endblock %}
