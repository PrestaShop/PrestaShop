{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block carrier_form_step_summary %}
<div id="js-carrier-summary" class="form-step js-form-step" data-step="5">
  <div class="card-block row">
    <div class="card-text">

      {% set isFree = 'free'|trans({}, 'Admin.Shipping.Feature') %}
      {% set isNotFree = 'not free'|trans({}, 'Admin.Shipping.Feature') %}

      {% set billingByPrice = 'according to the price'|trans({}, 'Admin.Shipping.Feature') %}
      {% set billingByWeight = 'according to the weight'|trans({}, 'Admin.Shipping.Feature') %}

      {% set outrangedHighest = 'Apply the cost of the highest defined range'|trans({}, 'Admin.Shipping.Feature') %}
      {% set outrangedDisable = 'Disable carrier'|trans({}, 'Admin.Shipping.Feature') %}

      <div>
        <div class="card">
          <div class="card-block">
            <p id="js-free-carrier-transit" class="not-displayable" data-carrier-transit="{{
              'This carrier is %1$s and the transit time is %2$s.'|trans({
              '%1$s': isFree,
              '%2$s': '__TRANSIT_TIME__'
            }, 'Admin.Shipping.Feature') }}">
            </p>
            <p id="js-priced-carrier-transit" class="not-displayable" data-carrier-transit="{{
            'This carrier is %1$s and the transit time is %2$s.'|trans({
              '%1$s': isNotFree,
              '%2$s': '__TRANSIT_TIME__'
            },'Admin.Shipping.Feature') }}">
            </p>

            <p id="js-carrier-shipping-cost-price" class="not-displayable" data-carrier-shipping-cost="
              {{ 'The shipping cost is calculated %1$s and the tax rule %2$s will be applied.'|trans({
              '%1$s': billingByPrice,
              '%2$s': '__TAX_RULE__'
              }, 'Admin.Shipping.Feature') }},">
            </p>
            <p id="js-carrier-shipping-cost-weight" class="not-displayable" data-carrier-shipping-cost="
              {{ 'The shipping cost is calculated %1$s and the tax rule %2$s will be applied.'|trans({
              '%1$s': billingByWeight,
              '%2$s': '__TAX_RULE__'
              }, 'Admin.Shipping.Feature') }}">
            </p>

            <p id="js-ranges-summary" class="not-displayable">
              <span id="js-range" class="not-displayable" data-range-summary="{{
                'This carrier can deliver orders from %1$s to %2$s.'|trans({}, 'Admin.Shipping.Feature')
              }}"></span>

              <span id="js-outranged-disable" class="not-displayable" data-outranged-summary="{{
                'If the order is out of range, the behavior is to %3$s.'|trans({
                  '%3$s': outrangedDisable
              }, 'Admin.Shipping.Feature') }}">
              </span>

              <span id="js-outranged-highest" class="not-displayable" data-outranged-summary="{{
                'If the order is out of range, the behavior is to %3$s.'|trans({
                  '%3$s': outrangedHighest
              }, 'Admin.Shipping.Feature') }}">
            </span>
            </p>

            <p>{{ 'This carrier will be proposed for those delivery zones:'|trans({}, 'Admin.Shipping.Feature') }}</p>
            <ul id="js-zones-summary" class="summary-list"></ul>

            <p>{{ 'And it will be proposed for those client groups:'|trans({}, 'Admin.Shipping.Feature') }}</p>
            <ul id="js-groups-summary" class="summary-list"></ul>

            {% if carrierForm.step_multi_shop is defined %}
              <p>{{ 'Finally, this carrier will be proposed in those shops:'|trans({}, 'Admin.Shipping.Feature') }}</p>
              <ul id="js-shops-summary" class="summary-list"></ul>
            {% endif %}

          </div>
        </div>
        <div>
          {{ ps.form_group_row(carrierForm.step_summary.is_enabled, {}, {
            'label': 'Enabled'|trans({}, 'Admin.Global'),
            'help': 'Enable the carrier in the front office.'|trans({}, 'Admin.Shipping.Help'),
          }) }}

          {% block carrier_step_summary_form_rest %}
            {{ form_rest(carrierForm.step_summary) }}
          {% endblock %}
        </div>
      </div>

      {% block carrier_form_rest %}
        {{ form_rest(carrierForm) }}
      {% endblock %}
    </div>
  </div>

  <div class="card-footer">
    {#@todo: admin_carriers_index#}
    <a href="{{ path('admin_carriers_create') }}" class="btn btn-outline-secondary">
      {{ 'Cancel'|trans({}, 'Admin.Actions') }}
    </a>

    <a href="#" class="btn btn-outline-secondary js-form-step-switch" data-step="4">
      {{ 'Previous'|trans({}, 'Admin.Actions') }}
    </a>

    <button class="btn btn-primary float-right">
      {{ 'Save'|trans({}, 'Admin.Actions') }}
    </button>
  </div>
</div>

{% endblock %}
