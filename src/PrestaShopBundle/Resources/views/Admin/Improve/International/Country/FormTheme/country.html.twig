{% extends '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block address_format_widget %}
  <div class="form-group row">
    <div class="col">
      <div class="form-group row">
        <div class="col-lg-4">
          {{ form_errors(form) }}
          {{ form_widget(form, {'attr': {'style': 'min-height: 200px'}}) }}
        </div>
        <div class="col-lg-8">
          <ul class="nav nav-pills address-format-tabs" id="custom-address-fields">
            <small class="form-text">
              {{ 'Some countries require different elements than others. Click on the button below to get the valid default address format for this country.'|trans({}, 'Admin.International.Feature') }}
            </small>
            {% for key, rows in available_fields %}
              <li class="nav-item">
                <a href="#availableListFieldsFor_{{ key }}" class="nav-link  {{ loop.index == 1 ? 'active show' : '' }}">
                  {{ key }}
                </a>
              </li>
            {% endfor %}
          </ul>
          <div class="tab-content address-format-tabs-content">
            {% for key, rows in available_fields %}
              <div class="tab-pane availableFieldsList panel {% if loop.index == 1 %} active {% endif %}" id="availableListFieldsFor_{{ key }}">
                {% for row in rows %}
                  {% set value = row %}
                  {% if row|split(':')|length > 1 %}
                    {% set value = row|split(':')|last %}
                  {% endif %}
                  <a href="javascript:void(0);" class="add-pattern btn btn-default btn-xs" id={{ row }}>
                    <i class="material-icons">add_circle_outline</i>
                    {{ value }}
                  </a>
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% include '@PrestaShop/Admin/Improve/International/Country/Blocks/format_actions.html.twig' with {'address_format': address_format, 'default_format': default_format} %}
{% endblock %}
