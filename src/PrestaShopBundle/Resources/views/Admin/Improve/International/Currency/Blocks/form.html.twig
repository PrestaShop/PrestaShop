{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block form %}
  {{ form_start(currencyForm) }}

  <div class="card">
    <div class="card-header">
      {{ 'Currencies'|trans({}, 'Admin.Global') }}
    </div>
    <div class="card-block row">
      <div class="card-text">
        <div class="form-group row">
          <label for="{{ currencyForm.iso_code.vars.id }}" class="form-control-label">
            {{ ps.label_with_help('Currency'|trans({}, 'Admin.Global'), ('ISO code (e.g. USD for Dollars, EUR for Euros, etc.).'|trans({}, 'Admin.International.Help'))) }}
          </label>
          <div class="col-sm">
            {{ ps.form_widget_with_error(currencyForm.iso_code) }}
          </div>
        </div>
        <div class="form-group row">
          {% set exchangeRateLabel %}
            {{ 'Exchange rates are calculated from one unit of your shop\'s default currency. For example, if the default currency is euros and your chosen currency is dollars, type "1.20" (1&euro; = $1.20).'|trans({}, 'Admin.International.Help') }}
          {% endset %}
          <label for="{{ currencyForm.exchange_rate.vars.id }}" class="form-control-label">
            {{ ps.label_with_help('Exchange rate'|trans({}, 'Admin.International.Feature'), (exchangeRateLabel)) }}
          </label>
          <div class="col-sm">
            {{ ps.form_widget_with_error(currencyForm.exchange_rate, {'attr': {'maxLength': 11}}) }}
          </div>
        </div>
        <div class="form-group row">
          <label for="{{ currencyForm.active.vars.id }}" class="form-control-label">
            {{ 'Status'|trans({}, 'Admin.Global') }}
          </label>
          <div class="col-sm">
            {{ ps.form_widget_with_error(currencyForm.active) }}
          </div>
        </div>

        {% if is_shop_feature_enabled %}
          <div class="form-group row">
            <label for="" class="form-control-label">
              {{ 'Shop association'|trans({}, 'Admin.Global') }}
            </label>
            <div class="col-sm">
              {{ ps.form_widget_with_error(currencyForm.shop_association) }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="card-footer">
      <div class="d-inline-flex">
        <a href="{{ path('admin_currencies_index') }}" class="btn btn-outline-secondary">
          <i class="material-icons">cancel</i>
          {{ 'Cancel'|trans({}, 'Admin.Actions') }}
        </a>
      </div>
      <div class="d-inline-flex float-right">
        <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
      </div>
    </div>

  </div>

  {{ form_end(currencyForm) }}
{% endblock %}
