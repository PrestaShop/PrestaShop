{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% set layoutHeaderToolbarBtn = {
  add: {
    href: path('admin_currencies_create'),
    desc: 'Add new currency'|trans({}, 'Admin.International.Feature'),
    icon: 'add_circle_outline',
  }
}
%}

{% block content %}

  <div class="row">
    <div class="col">
      {{ include('@PrestaShop/Admin/Common/Grid/grid_panel.html.twig', {'grid': currencyGrid }) }}
    </div>
  </div>

  {% block exchange_rates_block %}
    <div class="row">
      <div class="col-lg-6 col-md-8">
        {{ include('@PrestaShop/Admin/Improve/International/Currency/Blocks/exchange_rates.html.twig', {'exchangeRatesForm': currencySettingsForm}) }}
      </div>
    </div>
  {% endblock %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('themes/new-theme/public/currency.bundle.js') }}"></script>
  <script src="{{ asset('themes/default/js/bundle/pagination.js') }}"></script>
{% endblock %}
