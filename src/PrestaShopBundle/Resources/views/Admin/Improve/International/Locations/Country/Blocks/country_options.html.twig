{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{{ form_start(countryOptionsForm, {'action': path('admin_countries_save_options')}) }}
<div class="card">
  <h3 class="card-header">
    {{ 'Country options'|trans({}, 'Admin.International.Feature') }}
  </h3>
  <div class="card-block row">
    <div class="card-text">
      <div class="form-group row">
        <label class="form-control-label" for="{{ countryOptionsForm.options.restrict_delivery_countries.vars.id }}">
          {{ 'Restrict country selections in front office to those covered by active carriers'|trans({}, 'Admin.International.Help') }}
        </label>
        <div class="col-sm">
          {{ form_widget(countryOptionsForm.options.restrict_delivery_countries) }}
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="d-flex justify-content-end">
      <button class="btn btn-primary">
        {{ 'Save'|trans({}, 'Admin.Actions') }}
      </button>
    </div>
  </div>
</div>
{{ form_end(countryOptionsForm) }}
