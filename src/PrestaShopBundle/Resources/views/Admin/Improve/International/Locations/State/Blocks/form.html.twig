{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{{ form_start(stateForm) }}
<div class="card">
  <div class="card-header">
    {{ 'State'|trans({}, 'Admin.Global') }}
  </div>

  <div class="card-block row">
    <div class="card-text">
      {{ form_errors(stateForm) }}

      <div class="form-group row">
        {{ ps.label_with_help(
          'Name'|trans({}, 'Admin.Global'),
          'Provide the state name to be displayed in addresses and on invoices.'|trans({}, 'Admin.International.Help'),
          '',
          '',
          true
        ) }}
        <div class="col-sm">
          {{ form_widget(stateForm.name) }}
          {{ form_errors(stateForm.name) }}
        </div>
      </div>

      <div class="form-group row">
        {{ ps.label_with_help(
          'ISO code'|trans({}, 'Admin.International.Feature'),
          ('1 to 4 letter ISO code.'|trans({}, 'Admin.International.Help')) ~ ' ' ~ ('You can prefix it with the country ISO code if needed.'|trans({}, 'Admin.International.Help')),
          '',
          '',
          true
        ) }}
        <div class="col-sm">
          {{ form_widget(stateForm.iso_code) }}
          {{ form_errors(stateForm.iso_code) }}
        </div>
      </div>

      <div class="form-group row">
        {{ ps.label_with_help(
          'Country'|trans({}, 'Admin.Global'),
          ('Country where the state is located.'|trans({}, 'Admin.International.Help')) ~ ' ' ~ ('Only the countries with the option "contains states" enabled are displayed.'|trans({}, 'Admin.International.Help')),
          '',
          '',
          true
        ) }}
        <div class="col-sm">
          {{ form_widget(stateForm.id_country) }}
          {{ form_errors(stateForm.id_country) }}
        </div>
      </div>

      <div class="form-group row">
        {{ ps.label_with_help(
          'Zone'|trans({}, 'Admin.Global'),
          ('Geographical region where this state is located.'|trans({}, 'Admin.International.Help')) ~ ' ' ~ ('Used for shipping'|trans({}, 'Admin.International.Help')),
          '',
          '',
          true
        ) }}
        <div class="col-sm">
          {{ form_widget(stateForm.id_zone) }}
          {{ form_errors(stateForm.id_zone) }}
        </div>
      </div>

      {{ ps.form_group_row(stateForm.active, {}, {
        'label': 'Status'|trans({}, 'Admin.Global'),
      }) }}
    </div>
  </div>

  <div class="card-footer">
    <div class="d-inline-flex">
      <a href="{{ path('admin_states_index') }}" class="btn btn-outline-secondary">
        {{ 'Cancel'|trans({}, 'Admin.Actions') }}
      </a>
    </div>
    <div class="d-inline-flex float-right">
      <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
    </div>
  </div>

</div>
{{ form_end(stateForm) }}
