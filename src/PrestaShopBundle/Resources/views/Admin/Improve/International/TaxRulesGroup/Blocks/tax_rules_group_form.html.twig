{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{{ form_start(taxRulesGroupForm) }}
<div class="card">
  <div class="card-header">
    <i class="material-icons">money</i>
    {{ 'Tax Rules'|trans({}, 'Admin.Navigation.Menu') }}
  </div>

  <div class="card-block row">
    <div class="card-text">
      {{ form_errors(taxRulesGroupForm) }}

      {{ ps.form_group_row(taxRulesGroupForm.name, {}, {
        'label': 'Name'|trans({}, 'Admin.Global'),
        'help' : 'Invalid characters:'|trans({}, 'Admin.Global') ~ ' <>;=#{} '
      }) }}

      {{ ps.form_group_row(taxRulesGroupForm.enabled, {}, {
        'label': 'Enable'|trans({}, 'Admin.Actions'),
      }) }}

      {% if taxRulesGroupForm.shop_association is defined %}
        {{ ps.form_group_row(taxRulesGroupForm.shop_association, {}, {
          'label': 'Shop association'|trans({}, 'Admin.Global')
        }) }}
      {% endif %}

      {{ form_rest(taxRulesGroupForm) }}
    </div>
  </div>

  <div class="card-footer">
    <div class="d-inline-flex">
      <a href="{{ path('admin_tax_rules_groups_index') }}" class="btn btn-outline-secondary">
        {{ 'Cancel'|trans({}, 'Admin.Actions') }}
      </a>
    </div>
    <div class="d-inline-flex float-right">
      <button class="btn btn-primary">{{ 'Save and stay'|trans({}, 'Admin.Actions') }}</button>
    </div>
  </div>
</div>
{{ form_end(taxRulesGroupForm) }}
