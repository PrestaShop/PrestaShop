{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain 'Admin.International.Feature' %}

{% block content %}
  <div class="container">
    {{ form_start(localizationForm, {'action': path('admin_international_localization_save_settings')}) }}
    <div class="row">
        <div class="col">
          <div class="card">
            <h3 class="card-header">
              <i class="material-icons">settings</i> {{ 'Configuration'|trans({}, 'Admin.Global') }}
            </h3>

            <div class="card-block">
              <div class="card-text">
                <div class="form-group">
                  {{ ps.label_with_help(('Default language'|trans), ('The default language used in your shop.'|trans({}, 'Admin.International.Help'))) }}
                  {{ form_errors(localizationForm.configuration.default_language) }}
                  {{ form_widget(localizationForm.configuration.default_language) }}
                </div>

                <div class="form-group">
                  <label class="form-control-label">
                    {{ 'Set language from browser'|trans }}
                  </label>
                  {{ form_errors(localizationForm.configuration.detect_language_from_browser) }}
                  {{ form_widget(localizationForm.configuration.detect_language_from_browser) }}
                  <small class="form-text">{{ 'Set browser language as default language'|trans({}, 'Admin.International.Help') }}</small>
                </div>

                <div class="form-group">
                  {{ ps.label_with_help(('Default country'|trans), ('The default country used in your shop.'|trans({}, 'Admin.International.Help'))) }}
                  {{ form_errors(localizationForm.configuration.default_country) }}
                  {{ form_widget(localizationForm.configuration.default_country) }}
                </div>

                <div class="form-group">
                  <label class="form-control-label">
                    {{ 'Set default country from browser language'|trans }}
                  </label>
                  {{ form_errors(localizationForm.configuration.detect_country_from_browser) }}
                  {{ form_widget(localizationForm.configuration.detect_country_from_browser) }}
                  <small class="form-text">{{ 'Set country corresponding to browser language'|trans({}, 'Admin.International.Help') }}</small>
                </div>

                <div class="form-group">
                  {{ ps.label_with_help(('Default currency'|trans), ('The default currency used in your shop.'|trans({}, 'Admin.Shopparameters.Help'))) }}
                  {{ form_errors(localizationForm.configuration.default_currency) }}
                  {{ form_widget(localizationForm.configuration.default_currency) }}
                </div>

                <div class="form-group">
                  <label class="form-control-label">
                    {{ 'Time zone'|trans }}
                  </label>
                  {{ form_errors(localizationForm.configuration.timezone) }}
                  {{ form_widget(localizationForm.configuration.timezone) }}
                </div>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-end">
                <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
              </div>
            </div>
          </div>
        </div>
    </div>
    {{ form_end(localizationForm) }}
  </div>
{% endblock %}
