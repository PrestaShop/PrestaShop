{% extends '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit_base.html.twig' %}

{%- block attached_file_row -%}
  <tr class="attached_file_row" id="attached_file_row_{{ form.vars.name }}">
    {% for child in form.children %}
      {% set childType = child.vars.block_prefixes.1 %}
        {% if childType == 'hidden'%}
          {{ form_widget(child) }}
        {% else %}
        <td>
          {{ form_widget(child) }}
        </td>
        {% endif %}
    {% endfor %}
  </tr>
{%- endblock attached_file_row -%}

{%- block collection_row -%}
  <div class="form-group product-attachments-collection-row">
    {{ form_label(form) }}
    {{- block('form_alert') -}}

    <p class="subtitle">{{ 'Select the files (instructions, documentation, recipes, etc.) your customers can directly download on this product page.'|trans({}, 'Admin.Catalog.Feature') }} <br/> {{ 'Need to browse all files? Go to [1]Catalog > Files[/1]'|trans({'[1]':'<a href="'~getAdminLink("AdminAttachments")~'">','[/1]':'</a>'}, 'Admin.Catalog.Feature')|raw }} </p>

    <div id="attachments-empty-state" class="alert alert-info{% if form.vars.data is not empty %} d-none{% endif %}">
      <p>{{ 'No files attached'|trans({}, 'Admin.Catalog.Feature') }}</p>
    </div>

    {%- set attr = attr|merge({'data-prototype': form_row(prototype), 'data-prototype-name': prototype.vars.name }) -%}
    {%- set attr = attr|merge({'class': (attr.class|default('') ~ ' attachments-collection')|trim }) -%}
    {% if form.vars.data is empty %}
      {% set attr = attr|merge({'class': (attr.class ~ ' d-none')|trim }) %}
    {% endif %}

    <div {{ block('widget_attributes') }}>
      <div class="row">
        <div class="col-sm">
          <table class="table">
            <thead class="thead-default">
            <tr>
              {% for child in prototype.children %}
                {% set childType = child.vars.block_prefixes.1 %}
                {% if childType != 'hidden' %}
                  <th>{{ child.vars.label }}</th>
                {% endif %}
              {% endfor %}
            </tr>
            </thead>
            <tbody>
            {{- block('form_rows') -}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{%- endblock -%}
