{% block form_help %}
  {% if help %}
    {% include '@Common/HelpBox/helpbox.html.twig' with { "placement" : "top", "content": help|raw } %}
  {% endif %}
{% endblock form_help %}

{# We override this block just to insert the references in the same row as the name input field #}
{% block _product_header_name_widget %}
  {{- form_widget(form) -}}
  {{ _self.displayReferences(form.parent.parent.specifications.references) }}
{% endblock %}

{% macro displayReferences(referencesForm) %}
  <div class="references-display">
    {% for child in referencesForm.children %}
      {% if child.vars.value is not empty %}
        <label>{{ child.vars.label }}</label>
        <span>{{ child.vars.value }}</span>
      {% endif %}
    {% endfor %}
  </div>
{% endmacro %}
