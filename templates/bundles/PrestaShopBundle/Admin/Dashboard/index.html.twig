{% trans_default_domain 'Admin.Dashboard.Feature' %}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{# Set href here to have ID of button. #}
{% set layoutHeaderToolbarBtn = {
  'switch-demo': {
    'desc': 'Demo mode'|trans,
    'icon': 'toggle_on',
    'help': 'This mode displays sample data so you can try your dashboard without real numbers.'|trans({}, 'Admin.Dashboard.Help'),
    'href': '#'
  }
} %}

{% block content %}
  <div id="dashboard"
       data-simulation-url="{{ path('admin_dashboard_set_simulation') }}"
       data-demo-mode="{{ demoMode }}"
       data-refresh-url="{{ path('admin_dashboard_refresh') }}"
       data-dashboard-use-push="{{ dashboardUsePush }}"
       data-not-found="{{ 'No result'|trans({}, 'Messages') }}"
       data-save-module-options-url="{{ path('admin_dashboard_save_module_options') }}"
  >
    <div class="row">
      <div class="col-lg-12">
        {% include '@PrestaShop/Admin/Dashboard/Blocks/calendar.html.twig' %}
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-lg-3" id="hookDashboardZoneOne">
        {{ hookDashboardZoneOne|raw }}
      </div>

      <div class="col-md-8 col-lg-7" id="hookDashboardZoneTwo">
        {{ hookDashboardZoneTwo|raw }}
        <div id="dashboard-addons" class="row-margin-bottom">
          <a
            href="https://addons.prestashop.com/en/209-dashboards?utm_source=back-office&amp;utm_medium=dashboard&amp;utm_campaign=back-office-{{ langIso|upper }}&amp;utm_content={% if hostMode %}cloud{% else %}download{% endif %}"
            target="_blank"
            rel="noopener noreferrer nofollow"
          >
            <i class="material-icons">add</i>
            {{ 'Add more dashboard modules'|trans }}
          </a>
        </div>
      </div>

      <div class="col-md-12 col-lg-2">
        {% include '@PrestaShop/Admin/Dashboard/Blocks/news.html.twig' %}
        {% include '@PrestaShop/Admin/Dashboard/Blocks/version.html.twig' %}
        {% include '@PrestaShop/Admin/Dashboard/Blocks/links.html.twig' %}
      </div>
    </div>
  </div>
{% endblock %}

{% block extra_stylesheets %}
  <link href="{{ asset('themes/default/css/vendor/nv.d3.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('themes/new-theme/public/dashboard.bundle.js') }}"></script>
  <script src="{{ d3JsPath }}"></script>
  <script src="{{ asset('themes/default/js/vendor/nv.d3.min.js') }}"></script>
{% endblock %}
