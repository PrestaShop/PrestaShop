{% extends '@MailThemes/'~templateTheme~'/components/layout.html.twig' %}

{% block content %}
<tr>
  <td align="center" class="titleblock">
    <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
      <span class="title">{{ 'Hi {firstname} {lastname},'|trans({}, 'EmailsBody', locale) }}</span>
    </font>
  </td>
</tr>
<tr>
  <td class="space_footer">&nbsp;</td>
</tr>
<tr>
  <td class="box" style="border:1px solid #D6D4D4;">
    <table class="table">
      <tr>
        <td width="10">&nbsp;</td>
        <td>
          <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
            <p data-html-only="1" style="border-bottom:1px solid #D6D4D4;">
              {{ 'Password reset request for {shop_name}'|trans({}, 'EmailsBody', locale) }}
            </p>
            <span>
              {{ 'You have requested to reset your <span><strong>{shop_name}</strong></span> login details.'|trans({}, 'EmailsBody', locale) }}<br/><br/>
              {{ 'Please note that this will change your current password.'|trans({}, 'EmailsBody', locale) }}<br/><br/>
              {{ 'To confirm this action, please use the following link:'|trans({}, 'EmailsBody', locale) }} <br /> <a href="{url}">{url}</a>
            </span>
          </font>
        </td>
        <td width="10">&nbsp;</td>
      </tr>
    </table>
  </td>
</tr>
{% endblock %}