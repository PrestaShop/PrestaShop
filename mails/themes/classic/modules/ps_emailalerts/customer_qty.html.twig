{% extends '@MailThemes/'~templateTheme~'/components/layout.html.twig' %}

{% block content %}
<tr>
  <td align="center" class="titleblock">
    <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
      <span class="title">{{ 'Hi,'|trans({}, 'EmailsBody', locale) }}</span>
    </font>
  </td>
</tr>
<tr>
  <td class="space_footer">&nbsp;</td>
</tr>
<tr>
  <td class="box" style="border:1px solid #D6D4D4;">
    <table class="table">
      <tr>
        <td width="10">&nbsp;</td>
        <td>
          <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
            <p data-html-only="1" style="border-bottom:1px solid #D6D4D4;">
              {{ '{product} is now available.'|trans({}, 'EmailsBody', locale) }}
            </p>
            <span>
              {{ 'This item is once again in-stock.'|trans({}, 'EmailsBody', locale) }}<br /><br /> 
              {{ 'You can access the product page by clicking on the link:'|trans({}, 'EmailsBody', locale) }} <span><strong><a href="{product_link}">{product}</a></strong></span><br />
              {{ 'You can order it right now from our online shop.'|trans({}, 'EmailsBody', locale) }}
            </span>
          </font>
        </td>
        <td width="10">&nbsp;</td>
      </tr>
    </table>
  </td>
</tr>
{% endblock %}