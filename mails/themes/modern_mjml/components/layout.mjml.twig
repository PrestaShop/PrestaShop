<mjml>
  <mj-head>
    <mj-title>
      {% block title %}Title{% endblock %}
    </mj-title>
    <mj-font name="Open sans" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" />
    <mj-attributes>
      <mj-wrapper css-class="shadow wrapper-container" background-color="#fff" padding="0 0 30px" border-radius="4px" />
      <mj-text align="left" color="#363A41" font-family="Open sans, arial, sans-serif" font-size="14px" line-height="25px" />
      <mj-section />
    </mj-attributes>
    <mj-style>
      .shadow{
      box-shadow: 0 20px 30px 0 rgba(0,0,0,0.1);
      }
      .label{
      font-weight: 700;
      }
      @media only screen and (max-width: 480px) {
      body, .no-bg {
      background-color: #fff !important;
      }
      .left p{
      text-align: left;
      display:inline-block
      }
      }
    </mj-style>
  </mj-head>

  <mj-body background-color="#eee" width="604px">
    <mj-spacer height="40px" />
    <mj-wrapper>
      {% block header %}
        {% include '@MailThemes/modern_mjml/components/header.mjml.twig' %}
      {% endblock %}

      {% block content %}
      {% endblock %}
    </mj-wrapper>

    {% block footer %}
      {% include '@MailThemes/modern_mjml/components/footer.mjml.twig' %}
    {% endblock %}
  </mj-body>
</mjml>
